@{
    ViewBag.Title = "<i class='fa fa-gear '></i> Herramientas";
    ViewBag.Titlenot = "Herramientas";
}
<script src="~/js/cambiarmedico/cambiarTecnologo.js"></script>
<script src="~/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    function cargarEncuesta() {
        var examen = $("#num_exam").val();
        if (examen != "" && examen > 0) {

            $.ajax({
                url: "@Url.Action("GetEncuesta", "Herramientas")",
                data: { examen: examen, paciente: "" },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    if (data.result) {
                        $("#partial_encuesta").html(data.msj);
                        mostrarListas();
                    } else
                        mostrarmensaje(2, "Non existe ninguna referencia con el numero ingresado");

                }
            });
            cargarTecnologo();
        } else
            mostrarmensaje(4, "Ingrese un numero de Examen correcto");
    }

    function cargarTecnologo() {
        var tip = 3
        if (tip > 0)
            $.ajax({
                url: "@Url.Action("GetMedicos", "Herramientas")",
                data: { tipo: tip },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, "Ocurrio un error con el procesamiento, vuelva a interntarlo");
                },
                success: function (data) {
                    var stipo = "Tecnologo";
                    var items = "";
                    items += "<option value=''>- Seleccione " + stipo + " -</option>";
                    $.each(data, function (i, item) {
                        items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                    });

                    $("#lsttecnologo").html(items);
                }
            });
    }
    function verEncuesta(examen) {
        var _equipo = $("#lstEquipo").val();
        if (_equipo != '') {
            window.open('/LectorEncuesta/LectorEncuesta?examen=' + examen+'&isVisible=false', '_blank');
        } else {

            mostrarmensaje(4, 'Seleccione el <b>Equipo</b> para enviar los datos ');
        }
    }
    function modificarEncuesta() {
        var examen = $("#num_exam").val();
        var tip = 3;
        var medico = $("#lsttecnologo").val();
        if (examen != "" && examen > 0 && tip > 0 && medico != "") {
            $.ajax({
                url: "@Url.Action("SetMedico", "Herramientas")",
                data: { examen: examen, tipo: tip, medico: medico },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, "Ocurrio un error con el procesamiento, vuelva a interntarlo");
                },
                success: function (data) {
                    $.ajax({
                        url: "@Url.Action("GetEncuesta", "Herramientas")",
                        data: { examen: examen,paciente:"" },
                        dataType: "json",
                        type: "POST",
                        error: function () {
                            mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                        },
                        success: function (data) {
                            if (data.result) {
                                $("#partial_cambio").html(data.msj);

                            }
                        }
                    });
                }
            });
        }
        else {
            var stipo = "Tecnólogo";
            mostrarmensaje(4, "Seleccione un " + stipo);
        }
    }
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Cambiar Usuario Tecnólogo </h2>
            </div>
            <div class="box-body chart-responsive">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="row">

                        <div class="alert" id="msj">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>N° Examen:</label>
                                <input type="number" id="num_exam" placeholder="Número de Examen" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-1">
                            <div class="form-group">
                                <label></label>
                                <button type="button" class=" btn btn-info " onclick="cargarEncuesta()" id="btncargarEncuesta"><i class="fa fa-search"></i>&nbsp;&nbsp; Buscar&nbsp;&nbsp; </button>

                            </div>
                        </div>
                    </div>
                    <div class="row" id="div_partial_encuesta">
                        <div class="col-lg-4">
                            <div id="partial_encuesta">
                            </div>
                        </div>
                    </div>
                    <div class="row" id="div_datos">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Tecnologo:</label>
                                <select class="form-control" id="lsttecnologo">
                                    <option value="">- Seleccione el tipo -</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <label></label>
                                <button type="button" class=" btn btn-success " onclick="modificarEncuesta()" id="btncambiarUsuario"><i class="fa fa-exchange"></i>&nbsp;&nbsp;Cambiar</button>

                            </div>
                        </div>

                    </div>
                    <div class="row" id="div_partial_Cambio">
                        <div class="col-lg-4">
                            <div id="partial_cambio">
                            </div>
                        </div>
                    </div>
               
                }

            </div>
        </div>
    </div>
</div>
