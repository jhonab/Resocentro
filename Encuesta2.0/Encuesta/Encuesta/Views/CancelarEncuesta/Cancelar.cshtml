@{
    ViewBag.Title = "<i class='fa fa-times-circle-o '></i> Cancelar Examen";
    ViewBag.Titlenot = "Cancelar Examen";
}

<script src="~/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //activacion del boton en el menu
        $(".sidebar > .sidebar-menu > li").removeClass("active");
        $(".sidebar > .sidebar-menu > li.p1_2_5").addClass("active");


        $("#msj").hide()//ocultar el msj
        $("#div_partial_encuesta").hide();
    });

    function cargarEncuesta() {
        var examen = $("#num_exam").val();
        if (examen != "" && examen > 0) {
            if (examen == "")
                examen = 0;
            $.ajax({
                url: "@Url.Action("GetEncuesta", "CancelarEncuesta")",
                data: { examen: examen },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    if (data.result) {
                        $("#partial_encuesta").html(data.msj);
                        $("#div_partial_encuesta").show();
                    } else
                        mostrarmensaje(2, "Non existe ninguna referencia con el numero ingresado");

                }
            });

        } else
            mostrarmensaje(4, "Ingrese un numero de Examen correcto ");
    }
    function verEncuesta(examen) {
        var _equipo = $("#lstEquipo").val();
        if (_equipo != '') {
            window.open('/LectorEncuesta/LectorEncuesta?examen=' + examen+'&isVisible=false', '_blank');
        } else {

            mostrarmensaje(4, 'Seleccione el <b>Equipo</b> para enviar los datos ');
        }
    }
    function ModalCancelarExamen(examen) {
        $('#inputhidden_id').val(examen);
        $('#modal_Cancelar').modal('toggle');
    }
   
</script>

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Cancelación de Examen </h2>
            </div>
            <div class="box-body chart-responsive">


                <div class="row">

                    <div class="alert" id="msj">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>N° Examen:</label>
                            <input type="number" id="num_exam" placeholder="Número de Examen" class="form-control" />
                        </div>

                    </div>

                    <div class="col-lg-1">
                        <div class="form-group">
                            <label></label>
                            <button type="button" class=" btn btn-info " onclick="cargarEncuesta()" id="btncargarEncuesta"><i class="fa fa-search"></i>&nbsp;&nbsp; Buscar&nbsp;&nbsp; </button>

                        </div>
                    </div>
                </div>
                <div class="row" id="div_partial_encuesta">
                    <div class="col-lg-4">
                        <div id="partial_encuesta">
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#txtmotivo").hide();
        cargarTecnologo();
        $("#ddlMotivos").change(function () {
            if ($("#ddlMotivos").val() != "99")
                $("#txtmotivo").hide();
            else $("#txtmotivo").show();
        });
    });
    function cargarTecnologo() {
        var tip = 3
        if (tip > 0)
            $.ajax({
                url: "@Url.Action("getCancelaciones", "Herramientas")",
                data: { tipo: tip },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, "Ocurrio un error con el procesamiento, vuelva a interntarlo");
                },
                success: function (data) {
                    var items = "";
                    items += "<option value=''>- Seleccione el Motivo -</option>";
                    $.each(data, function (i, item) {
                        items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                    });

                    $("#ddlMotivos").html(items);
                }
            });
    }
    function CancelarExamen(examen) {
        var motivo = $("#ddlMotivos option:selected").text();
        var detalle = $("#txtmotivo").val();
        var all = false;
        if ($("#all").is(':checked'))
            all = true;
        var pasa = true;
        if ($("#ddlMotivos").val() == "0") {
            pasa = false;
            mostrarmensaje(4, "Debe seleccionar un  motivo");
        }
        if ($("#ddlMotivos").val() == "99" && detalle == "") {
            pasa = false;
            mostrarmensaje(4, "Debe ingresar un  motivo");
        }
        if (pasa) {
            $.ajax({
                url: "@Url.Action("CancelarExamen", "SupervisarExamen")",
                data: { examen: examen, all: all, motivo: motivo, detalle: detalle },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>no</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    mostrarmensaje(1, 'Se cancelo el estudio');
                    table.ajax.reload();
                }
            });
        }

    }
</script>
<!-- Modal Datos -->
<div class="modal fade" id="modal_Cancelar" tabindex="-1" role="dialog" aria-labelledby="modal_CancelarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal_ModalidadLabel">Confirmar Cancelación de Examen</h4>
            </div>
            <div class="modal-body" id="_2">
                <input type="hidden" id="inputhidden_id" />
                <div class='form-group'>
                    <label>Motivo Cancelacion: </label>
                    <select id="ddlMotivos" class="form-control">
                    </select>
                    Cancelar todos los estudios
                    <input type="checkbox" id="all" />
                    <br />
                    <textarea class="form-control animate" id="txtmotivo" placeholder="Ingrese el motivo de cancelación"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" onclick="CancelarExamen($('#inputhidden_id').val())" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

