@model Encuesta.ViewModels.Sedacion.SedacionExamenViewModel

@{
    ViewBag.Title = "<i class='fa fa-tint '></i> Sedación";
    ViewBag.Titlenot = "Sedación";
}

<script src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="~/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#msj").fadeOut()//ocultar el msj

        /*VIP*/
        @if (Model.examen.ATENCION.CITA.citavip)
        {
            <text>
        $("#modal_paciente").append('<i class="fa fa-star fa-lg fa-spin" style="color: #F8DB07;"></i>');
        </text>
        }

        $('#table_estudios').dataTable({
            //"columnDefs": [
            // { "targets": [2], "searchable": false },
            //{ "targets": [3], "searchable": false },

            //]
        });

    });

    function agregarInsumo(idcontraste, idinsumo) {
        var cant = $("#txtcantidad").val();
        var isaplicado = $("#chkisAplicado").prop('checked');
        if (cant != "") {
            $.ajax({
                url: "@Url.Action("IngresarInsumo", "RealizarSedacion")",
                data: { sedacion: idcontraste, insumo: idinsumo, cant: cant, isaplicado: isaplicado },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    if (data.result) {
                        mostrarTecnica(idcontraste);
                        $("#txtcantidad").val("");
                        $("#chkisAplicado").prop('checked', false);
                    }
                }
            });
        } else {
            $("#txtcantidad").focus();
            mostrarmensaje(4, 'Ingrese la cantidad que uso');
        }

    }
    function eliminarInsumo(id) {

        $.ajax({
            url: "@Url.Action("EliminarInsumo", "RealizarSedacion")",
            data: { nco: id },
            dataType: "json",
            type: "POST",
            error: function () {
                mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
            },
            success: function (data) {
                if (data.result)
                    mostrarTecnica(@Model.sedacion.idsedacion);
            }
        });
    }
    function mostrarTecnica(id_sedacion) {
        $("#partialListInsumo").load('@Url.Action("ListarInsumos", "RealizarSedacion")' + '?id_sedacion=' + id_sedacion)
    }

</script>
<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Registrar Sedación </h2>
            </div>
            <div class="box-body chart-responsive">

                @using (Html.BeginForm())
                {              
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    Datos Examen
                                </div>
                                <div class="panel-body">
                                    <div class="col-lg-6">
                                        @Html.Partial("_DatosExamen", Model.examen)
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.Partial("_DatosPaciente", Model.paciente)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-primary">

                                <div class="panel-heading">
                                    Datos de Registro 
                                </div>
                                <div class="panel-body">

                                    <div class="row">

                                        <div class="col-lg-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    Motivo de Sedación
                                                </div>
                                                <div class="panel-body">
                                                    <script type="text/javascript">
                                                        $(document).ready(function () {
                                                            mostrarDiv();
                                                            $("#motivosedacion").change(mostrarDiv);
                                                        });

                                                        function mostrarDiv() {
                                                            /*sedacion*/
                                                            if ($('#motivosedacion').val() == "Otros")
                                                                $("#motivo_otros").show();
                                                            else
                                                                $("#motivo_otros").hide();

                                                        }
                                                    </script>
                                                    <div class="form-group">
                                                        @Html.HiddenFor(model => model.idsedacion)
                                                        <label>Motivo Sedación: </label>
                                                        @Html.DropDownListFor(model => model.motivosedacion, (SelectList)ViewBag.motivo_sedacion, "- Seleccione el Motivo de Sedación -", new { @class = "form-control" })
                                                        @Html.TextBoxFor(x => x.motivo_otros, new { @class = "form-control", @placeholder = "Ingrese el motivo" })

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Tipo Sedación: </label>
                                                        @Html.DropDownListFor(model => model.tiposedacion, (SelectList)ViewBag.tipo_sedacion, "- Seleccione el Tipo de Sedación -", new { @class = "form-control" })

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-lg-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    Sedación
                                                </div>
                                                <div class="panel-body">
                                                    <div class="form-group">
                                                        <label>Inicio Sedación: </label>
                                                        @Html.TextBoxFor(x => x.fec_ini, new { @class = "form-control", @type = "time" })

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Fin Sedación: </label>
                                                        @Html.TextBoxFor(x => x.fec_fin, new { @class = "form-control", @type = "time" })

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    Insumos
                                                </div>
                                                <div class="panel-body">
                                                    <div class="alert" id="msj">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Cantidad: </label>
                                                        <input type="number" step="any" class="form-control" style="width: 15%;" id="txtcantidad" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Erroneo: </label>
                                                        <input type="checkbox" id="chkisAplicado" />
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-lg-6">
                                                            <div class="panel-group" id="accordion" style="font-size: smaller!important">
                                                                <div class="panel panel-default">
                                                                    <div class="panel-heading">
                                                                        <h4 class="panel-title">
                                                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Seleccione los Insumos </a>
                                                                        </h4>
                                                                    </div>
                                                                    <div id="collapseOne" class="panel-collapse collapse in">
                                                                        <div class="panel-body">
                                                                            <table class="table table-striped table-bordered table-hover">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>Insumo</th>
                                                                                        @*<th>Cantidad</th>
                                                                                        <th>Unidad</th>*@
                                                                                        <th style="text-align:center;width:40px;"></th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    @foreach (var item in (List<Encuesta.ViewModels.Sedacion.Sedacion_Insumo>)ViewBag.tecnicas)
                                                                                    {
                                                                                        <tr>
                                                                                            <td style="padding: 1px!important">@Html.DisplayFor(modelItem => item.nom_sedacion)</td>
                                                                                            @*<td style="padding: 1px!important">@Html.DisplayFor(modelItem => item.cantidad)</td>
                                                                                            <td style="padding: 1px!important">@Html.DisplayFor(modelItem => item.unidad_medida)</td>*@
                                                                                            <td class="table_id" style="padding: 1px!important">
                                                                                                <button type="button" class="btn btn-info btn-circle" onclick="agregarInsumo('@Model.sedacion.idsedacion','@item.idsedacion')"><i class="fa fa-check"></i></button>
                                                                                            </td>


                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="panel-group" id="accordion1" style="font-size: smaller!important">
                                                                <div class="panel panel-default">
                                                                    <div class="panel-heading">
                                                                        <h4 class="panel-title">
                                                                            <a data-toggle="collapse" data-parent="#accordion1" href="#collapsetwo">Técnicas ingresadas</a>
                                                                        </h4>
                                                                    </div>
                                                                    <div id="collapsetwo" class="panel-collapse collapse in">
                                                                        <div class="panel-body">
                                                                            <button type="button" class="btn btn-outline btn-primary btn-xs" onclick="mostrarTecnica('@Model.idsedacion')"><i class="fa fa-binoculars"></i>Mostrar</button>
                                                                            <div id="partialListInsumo">
                                                                                @Html.Partial("_ListInsumos", Model.insumos)
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p style="text-align: center;">
                        <script type="text/javascript">
                            function validar() {

                                var msj = "";
                                if ($('#motivosedacion').val() == "")
                                    msj += "- Seleccione el motivo de sedación\n";
                                else if ($('#motivosedacion').val() == "Otros" && $('#motivo_otros').val() == "")
                                    msj += "- Ingrese el motivo de sedación\n";
                                else { }

                                if ($('#tiposedacion').val() == "")
                                    msj += "- Seleccione el Tipo de sedación\n";

                                if ($('#fec_ini').val() == "")
                                    msj += "- Ingrese la Hora de Inicio\n";

                                if ($('#fec_fin').val() == "")
                                    msj += "- Ingrese la Hora de Fin\n";

                                if (msj == "")
                                    return true;
                                else {
                                    alert(msj);
                                    return false;
                                }
                            }
                        </script>
                        <input type="submit" class="btn btn-success" onclick="return validar()" value="Registrar" />
                        <a href='@Url.Action("ListaEspera")' class="btn btn-primary">Regresar a la Lista</a>
                    </p>
                }
            </div>
        </div>
    </div>
</div>

