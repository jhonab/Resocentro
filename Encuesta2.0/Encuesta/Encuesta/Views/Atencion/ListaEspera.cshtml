<script>
    var table;
    var myDate = new Date();

    $(document).ready(function () {
        $("#msj").fadeOut()//ocultar el msj
        $('.animate').autosize();//autosizeTexbox
        table = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("ListaAsync", "Atencion")",
            //"bProcessing": true,
            "iDisplayLength": 20,
            "lengthMenu": [[20, 25, 50, -1], [20, 25, 50, "All"]],
            "aoColumns": [
                            { "sName": "N Examen" },//0
                             { "sName": "Paciente" },//1
                             { "sName": "Sede" },//2
                             { "sName": "HCita" },//3
                             { "sName": "HAdmin." },//4
                             { "sName": "Min." },//5
                             { "sName": "Concicion" },//6
                             { "sName": "Estudio" },//7
                             { "sName": "Equipo" },//8
                             { "sName": "turnomedico", "bVisible": false },//9
                             {
                                 "sName": "Acciones",
                                  //"bVisible": false,
                                 "mRender": function (data, type, full) {
                                     return "";
                                 }
                             },//10
                             { "sName": "isvip", "bVisible": false },//11
                             { "sName": "sedacion", "bVisible": false },//12
                             { "sName": "asginado", "bVisible": false },//13
                             { "sName": "escaneados", "bVisible": false },//14
                             { "sName": "encuesta", "bVisible": false },//15
                             { "sName": "carta", "bVisible": false },//16

            ],
            "createdRow": function (row, aData, dataIndex) {

                // si es una validacion pendiente
                var fec_admi = new Date((aData[4]).substring(6, 10), parseInt((aData[4]).substring(3, 5)) - 1, (aData[4]).substring(0, 2), 0, 0, 0);
                var fec_now = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate(), 0, 0, 0);

                if (fec_admi < fec_now) {
                    $(row).addClass('warning');
                }
                else {
                    $('td:eq(4)', row).html((aData[4]).substring(11));
                }
                // si es Sedacion
                if (aData[12] == "True") {
                    $(row).addClass('danger alert-danger');
                }
                // si es VIP
                if (aData[11] == "True") {
                    $('td:eq(1)', row).html(aData[1] + ' <i class="fa fa-star fa-lg fa-spin" style="color: #F8DB07;"></i>');
                }
                // minutos trascurridos
                if (parseInt(aData[5]) > 40) {
                    $('td:eq(5)', row).addClass('tiempo_excedente');
                }
                else if (parseInt(aData[5]) > 20) {
                    $('td:eq(5)', row).addClass('tiempo_intermedio');
                }
                else {
                    $('td:eq(5)', row).addClass('tiempo_correcto');
                }

                // Adjuntos
                if (aData[14] == "True" || aData[16] == "True") {
                    $('td:eq(1)', row).append('&nbsp;&nbsp;<button type="button" onclick="DescargarAdjunto(' + aData[0] + ',' + aData[14].toString().toLowerCase() + ',' + aData[16].toString().toLowerCase() + ');" class="btn btn-outline btn-primary btn-xs "><i class="fa fa-paperclip fa-2x"></i> </button>');

                }
                //alert("k"+aData[9]);
                // realizar encuesta
                if (aData[9] == "" || aData[9] == "0") {//si esta listo para encuestar
                    $('td:eq(9)', row).append('&nbsp;&nbsp;<button type="button" class="btn btn-success"><i class="fa fa-edit fa-1x"></i> Encuesta</button>');

                } else if (aData[9] == "2") {
                    $('td:eq(9)', row).append('&nbsp;&nbsp;<button type="button" class="btn btn-primary"><i class="fa fa-check-square-o fa-1x"></i> Supervisor</button>');

                }
                else
                {
                    $('td:eq(9)', row).append('&nbsp;&nbsp;<button type="button" class="btn btn-default"><i class="fa fa-fire fa-1x"></i> Tecnológo</button>');

                }

                @if (!User.IsInRole("5"))
                {
                     <text>if (aData[12] == "True") {
                    $('td:eq(9)', row).html("");
                }
                    </text>
                }

                //agregarboton de informacion Paciente
                $('td:eq(1)', row).append('<br /> <button type="button" onclick="cargarDatosExamen(' + aData[0] + ')"  class="btn btn-outline btn-info btn-xs" ><i class="fa fa-info-circle"></i> Info</button>');



                //agregar botn para Cancelar
                $('td:eq(0)', row).append('<br /><button type="button" onclick="ModalCancelarExamen(' + aData[0] + ')"  class="btn btn-outline  btn-danger btn-xs"><i class="fa fa-times-circle"></i> Cancelar</button>');
            }
        });
        $("#div_time").html('<p class="pull-right">Last Refresh : <b>' + myDate.toLocaleTimeString() + '</b></p>');
        $('#myDataTable').css("width", "100%!important");
        setInterval(function () {
            table.ajax.reload();
            $('#myDataTable').width("100%");
            var _date = new Date();
            $("#div_time").html('<p class="pull-right">Last Refresh : <b>' + _date.toLocaleTimeString() + '</b></p>');
        }, 10000);
        getSucursales(table);//tipo filtro
        //getEquipo(table, "2");//tipo Modal


    });

    function ModalCancelarExamen(examen) {
        $('#inputhidden_id').val(examen);
        $('#modal_Cancelar').modal('toggle');
    }

    function RealizarEncuesta(examen) {
@*        window.location.href = ('@Url.Action("RealizarEncuesta", "RealizarEncuesta")' + '?examen=' + examen);*@
    }

    function getSucursales(table) {
        $.ajax({
            url: "@Url.Action("getSedes", "Atencion")",
            data: {},
            dataType: "json",
            type: "POST",
            error: function () {
                alert("error cargar sedes");
            },
            success: function (data) {
                var items = "";
                items += "<option value='' >- Todos -</option>";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });
                $("#lstsede").html(items);
                $("#lstsede").change(function () {
                    var texto = $("#lstsede").val();
                    if (texto != '') {
                        $('#myDataTable').dataTable().fnFilter(texto);
                    }
                    else {
                        $('#myDataTable').dataTable().fnFilter('');
                    }
                });
                var parameter = $.get("equipo");

                if (parameter != null) {
                    $("#lstsede").val(parameter);
                    var texto = $("#lstsede option:selected").html()
                    $('#myDataTable').dataTable().fnFilter(texto);
                }



            }
        });
    }

    function DescargarAdjunto(examen, doc, carta) {
        if (doc) {
            window.open('@Url.Action("Getfile", "Adjuntos")' + '?examen=' + examen + '&tipo=1');
        }
        if (carta) {
            window.open('@Url.Action("Getfile", "Adjuntos")' + '?examen=' + examen + '&tipo=2');
        }
    }

    function cargarDatosExamen(examen) {
        $.ajax({
            url: "@Url.Action("DatosExamen", "Atencion")",
            data: { examen: examen },
            dataType: "json",
            type: "POST",
            error: function () {
                mostrarmensaje(4, 'Ocurrio un problema y <b>no</b> se enviaron los datos al sistema');
            },
            success: function (data) {
                $('#myModal .modal-body').html(data.mensaje);
                $('#myModal').modal('toggle');
            }
        });

    }
    function CalculateDateDiff(dateFrom, dateTo) {
        var difference = (dateTo - dateFrom);

        var years = Math.floor(difference / (1000 * 60 * 60 * 24 * 365));
        difference -= years * (1000 * 60 * 60 * 24 * 365);
        var months = Math.floor(difference / (1000 * 60 * 60 * 24 * 30.4375));

        var dif = '';
        if (years > 0)
            dif = years + ' años ';

        if (months > 0) {
            if (years > 0) dif += ' y ';
            dif += months + ' meses';
        }

        return dif;
    }

   

</script>


