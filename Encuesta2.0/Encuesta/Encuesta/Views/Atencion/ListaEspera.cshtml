<script type="text/javascript">
    $(document).ready(function () {
        $("#txtmotivo").hide();
        cargarTecnologo();
        $("#ddlMotivos").change(function () {
            if ($("#ddlMotivos").val() != "99")
                $("#txtmotivo").hide();
            else $("#txtmotivo").show();
        });
    });
    function cargarTecnologo() {
        var tip = 3
        if (tip > 0)
            $.ajax({
                url: "@Url.Action("getCancelaciones", "Herramientas")",
                data: { tipo: tip },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, "Ocurrio un error con el procesamiento, vuelva a interntarlo");
                },
                success: function (data) {
                    var items = "";
                    items += "<option value=''>- Seleccione el Motivo -</option>";
                    $.each(data, function (i, item) {
                        items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                    });

                    $("#ddlMotivos").html(items);
                }
            });
    }
    function CancelarExamen(examen) {
        var motivo = $("#ddlMotivos option:selected").text();
        var detalle = $("#txtmotivo").val();
        var all = false;
        if ($("#all").is(':checked'))
            all = true;
        var pasa = true;
        if ($("#ddlMotivos").val() == "0") {
            pasa = false;
            mostrarmensaje(4, "Debe seleccionar un  motivo");
        }
        if ($("#ddlMotivos").val() == "99" && detalle == "") {
            pasa = false;
            mostrarmensaje(4, "Debe ingresar un  motivo");
        }
        if (pasa) {
            $.ajax({
                url: "@Url.Action("CancelarExamen", "SupervisarExamen")",
                data: { examen: examen, all: all, motivo: motivo, detalle: detalle },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>no</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    mostrarmensaje(1, 'Se cancelo el estudio');
                    table.ajax.reload();
                }
            });
        }

    }
</script>
