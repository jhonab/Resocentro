@{
    ViewBag.Title = "<i class='fa fa-tint '></i> Asignar Urgencia - Hopitalizado";

    ViewBag.Titlenot = "Asignar Urgencia - Hopitalizado";
}
<script src="~/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    function cargarEncuesta() {
        var examen = $("#num_exam").val();
        if (examen != "" && examen > 0) {

            $.ajax({
                url: "@Url.Action("setHopitalizado", "RealizarEncuesta")",
                data: { codigo: examen },
                dataType: "json",
                type: "POST",
                error: function () {
                    alert('Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                },
                success: function (data) {
                    if (data)
                        toastr.success("Se cambio la Urgencia del examen", opts);
                    else
                        toastr.error("No existe encuesta", opts);
                }
            });
        } else
            toastr.warning("Ingrese un numero de Examen correcto", opts);
    }


</script>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Asignar Urgencia - Hopitalizado </h2>
            </div>
            <div class="box-body chart-responsive">

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>N° Examen:</label>
                            <input type="number" id="num_exam" placeholder="Número de Examen" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div class="form-group">
                            <label></label>
                            <button type="button" class=" btn btn-info " onclick="cargarEncuesta()" id="btncargarEncuesta"><i class="fa fa-pencil"></i>&nbsp;&nbsp; Agregar&nbsp;&nbsp; </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>