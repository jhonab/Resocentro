@model IEnumerable<Encuesta.ViewModels.AmpliacionViewModel>
@{
    ViewBag.Title = "ListaEspera";
}

@{
    ViewBag.Title = "<i class='fa fa-yelp '></i> Ampliaciones";
    ViewBag.Titlenot = "Ampliaciones";
}

<script src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    $(function () {
        //activacion del boton en el menu
        $(".sidebar > .sidebar-menu > li").removeClass("active");
        $(".sidebar > .sidebar-menu > li.p1-1").addClass("active");
    })
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Lista de Citas  </h2>
            </div>
            <div class="box-body chart-responsive">

                <div class="pull-right">
                    <button class="btn btn-primary no-print" data-toggle="modal" data-target="#modalExamen">
                        <b><i class="fa fa-search fa-2x"></i>&nbsp;&nbsp;Examen</b>
                    </button>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Lista de Citas con Ampliaciones
                  
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="myDataTable" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Estado</th>
                                        <th>Paciente</th>
                                        <th>H. Cita</th>
                                        <th>Estudio</th>
                                        <th>Motivo Ampliacion</th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.cita.estadoestudio</td>
                                            <td>@item.cita.CITA.PACIENTE.apellidos, @item.cita.CITA.PACIENTE.nombres</td>
                                            <td>@Html.DisplayFor(x=> item.cita.horacita, "ShortTime")</td>
                                            <td>@item.cita.ESTUDIO.nombreestudio</td>
                                            <td>
                                                @if (item.examen != null){
                                                   <text> @item.examen.AmpliMotivo</text>
                                                }
                                            </td>
                                        </tr>   
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
