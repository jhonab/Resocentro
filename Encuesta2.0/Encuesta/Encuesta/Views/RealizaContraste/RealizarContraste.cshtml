<script type="text/javascript" id="+">

    function validarContraste() {
        
        var cant = $("#txtcantidad").val();
        var idfrasco = $("#lstFrasco").val();
        var frasco_s = $("#lstFrasco option:selected").html();
        if (cant != "" && frasco_s != "") {
            $.ajax({
                url: "@Url.Action("getValidacionContraste", "RealizaContraste")",
                data: { frasco: frasco_s, stock: idfrasco, cantidad: cant },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                },
                success: function (data) {

                    if (data.result == true) {
                        guardarContraste();
                    }
                    else {
                        mostrarmensaje(4, 'Solo hay disponible ' + data.faltante + ' ' + data.medida + ' del frasco seleccionado');
                    }
                }
            });
        } else {
            $("#txtcantidad").focus();
            mostrarmensaje(4, 'Ingrese la cantidad que uso y el frasco');
        }

    }

    function ConsultarStock(int ) {
        var idfrasco = $("#lstFrasco").val();
        var frasco_s = $("#lstFrasco option:selected").html();
        $.ajax({
            url: "@Url.Action("getStockContraste", "RealizaContraste")",
            data: { frasco: frasco_s, stock: idfrasco },
        dataType: "json",
        type: "POST",
        error: function () {
            mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
        },
        success: function (data) {
            $("#lblStock").html(data);
        }
    });
    }

    function guardarContraste() {

        var cant = $("#txtcantidad").val();
        var frasco = $("#lstFrasco option:selected").html();
        var error = $("#tipoerror").val();
        var idcontraste = $('#hiddencontraste').val();
        var idinsumo = $('#lstFrasco').val();
        var isaplicado = $("#chkisAplicado").prop('checked');
        if (cant != "" && frasco != "") {
            if (isaplicado && error == "") {
                mostrarmensaje(4, 'Seleccione el tipo de error');
            } else {
                $.ajax({
                    url: "@Url.Action("IngresarInsumo", "RealizaContraste")",
                    data: { contraste: idcontraste, insumo: idinsumo, cant: cant, isaplicado: isaplicado, lote: frasco, error: error },
                    dataType: "json",
                    type: "POST",
                    error: function () {
                        mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
                    },
                    success: function (data) {
                        if (data.result) {
                            mostrarTecnica(idcontraste);
                            $("#txtcantidad").val("");
                            $("#lstFrasco option:selected").html();
                            $("#chkisAplicado").prop('checked', false);
                            $("#tipoerror").val("");
                            $('#RegistrarContrasteModal').modal('hide');
                        }
                    }
                });
            }
        } else {
            $("#txtcantidad").focus();
            mostrarmensaje(4, 'Ingrese la cantidad que uso y el frasco');
        }
    }
</script>
<div class="modal" id="RegistrarContrasteModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="RegistrarContrasteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
