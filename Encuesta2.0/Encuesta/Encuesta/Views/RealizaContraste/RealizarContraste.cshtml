<script type="text/javascript">
    $(document).ready(function () {
        $("#msj").fadeOut()//ocultar el msj
        $("#div-error").hide();
        /*VIP*/
        @if (Model.examen.ATENCION.CITA.citavip)
        {
            <text>
        $("#modal_paciente").append('<i class="fa fa-star fa-lg fa-spin" style="color: #F8DB07;"></i>');
        </text>
        }

        $('#table_estudios').dataTable({
            //"columnDefs": [
            // { "targets": [2], "searchable": false },
            //{ "targets": [3], "searchable": false },

            //]
        });

    });
    function visibleTipoError() {
        var isaplicado = $("#chkisAplicado").prop('checked');
        if (isaplicado)
            $("#div-error").show();
        else
            $("#div-error").hide();
    }

    function agregarInsumo(idcontraste, id_insumo) {
        $('#hiddencontraste').val(idcontraste);
        $('#hiddeninsumo').val(id_insumo);
        $('#lblStock').html("");
        $('#txtcantidad').val("");
        $.ajax({
            url: "@Url.Action("getListaFrascos", "RealizaContraste")",
            data: { idinsumo: id_insumo , almacen : @Model.examen.codigoestudio.Substring(0,3)},
            dataType: "json",
            type: "POST",
            error: function () {
                alert("error");
            },
            success: function (data) {
                var items = "";

                items += "<option value='' >- Seleccionar Frasco -</option>";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });

                $("#lstFrasco").html(items);

            }
        });
        $('#RegistrarContrasteModal').modal('show');
    }
    function eliminarInsumo(id) {

        $.ajax({
            url: "@Url.Action("EliminarInsumo", "RealizaContraste")",
            data: { nco: id },
            dataType: "json",
            type: "POST",
            error: function () {
                mostrarmensaje(4, 'Ocurrio un problema y <b>NO</b> se enviaron los datos al sistema');
            },
            success: function (data) {
                if (data.result)
                    mostrarTecnica(@Model.contraste.idcontraste);
            }
        });
    }
    function mostrarTecnica(idcontraste) {
        $("#partialListInsumo").load('@Url.Action("ListarInsumos", "RealizaContraste")' + '?idcontraste=' + idcontraste)
    }

   
</script>
