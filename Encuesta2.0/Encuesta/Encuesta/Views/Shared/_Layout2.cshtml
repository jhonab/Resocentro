<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Titlenot | Resocentro</title>

    <link rel="shortcut icon" href="../img/fondo/icono.ico">
    <meta content='width=device-width, initial-scale=1' name='viewport'>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/font-awesome-4-2/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="~/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    <script src="/js/jquery.min.js"></script>
    <style type="text/css">
        #dropZone {
            background: gray;
            border: black dashed 3px;
            width: 200px;
            padding: 50px;
            text-align: center;
            color: white;
        }
    </style>
    <script type="text/javascript">
        $(function () {

            $('#dropZone').filedrop({
                url: '@Url.Action("UploadFiles", "Account")',
                paramname: 'files',
                maxFiles: 1,
                dragOver: function () {
                    $('#dropZone').css('background', 'blue');
                },
                dragLeave: function () {
                    $('#dropZone').css('background', 'gray');
                },
                drop: function () {
                    $('#dropZone').css('background', 'gray');
                },
                afterAll: function () {
                    $('#dropZone').html('El archivo fue guardado correctamente!');
                },
                uploadFinished: function (i, file, response, time) {
                    $('#uploadResult').append('<li>' + file.name + '</li>');
                    $('#modal_Modalidad').modal('toggle');
                    window.location.reload()
                }
            });
            ContadorEventos();
            ContadorEventosImg();
            ContadorEventosM();
        });

        function ContadorEventos() {

           
            //var nexa = ($('#modalidad_examen').val());
            //var fec = ($('#modal_Modalidad_Fecha').val());
            //var talla = ($('#modal_Modalidad_talla').val());
            //var pes = ($('#modal_Modalidad_Peso').val());
            $.ajax({
                url: "@Url.Action("ContadorEventos", "ResolverEvento")",
                dataType: "json",
                type: "POST",
                success: function (data) {
                  
                    $('#lblCantidadEventos').html(data);
                }
            });
        }

        function ContadorEventosM() {

           
            //var nexa = ($('#modalidad_examen').val());
            //var fec = ($('#modal_Modalidad_Fecha').val());
            //var talla = ($('#modal_Modalidad_talla').val());
            //var pes = ($('#modal_Modalidad_Peso').val());
            $.ajax({
                url: "@Url.Action("ContadorEventosM", "ResolverEventosImg")",
                dataType: "json",
            type: "POST",
            success: function (data) {
                  
                $('#lblCantidadEventosM').html(data);
            }
        });
        }


        function ContadorEventosImg() {

           
            //var nexa = ($('#modalidad_examen').val());
            //var fec = ($('#modal_Modalidad_Fecha').val());
            //var talla = ($('#modal_Modalidad_talla').val());
            //var pes = ($('#modal_Modalidad_Peso').val());
            $.ajax({
                url: "@Url.Action("ContadorEventosImg", "ResolverEventosImg")",
                dataType: "json",
            type: "POST",
            success: function (data) {
                  
                $('#lblCantidadEventosImg').html(data);
            }
        });
        }
    </script>


</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="@Url.Action("Index", "Home")" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            <img src="../../img/Logo.png" alt="" width="160px" />
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu"></li>
                    <!-- Notifications: style can be found in dropdown.less -->
                    <li class="dropdown notifications-menu"></li>
                    <!-- Tasks: style can be found in dropdown.less -->
                    <li class="dropdown tasks-menu"></li>
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        @{ Encuesta.Member.CustomMembershipUser user = Membership.GetUser(true) as Encuesta.Member.CustomMembershipUser;
                         var oRuta = "http://extranet.resocentro.com:5050/PaginaWeb/Perfiles/"; }
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span>
                                @if (Request.IsAuthenticated)
                                {
                                    @user.UserName
                                } <i class="caret"></i>
                            </span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header bg-light-blue">
                                @if (user.pathBuddy)
                                {
                                     oRuta = oRuta + user.ProviderUserKey.ToString() + ".png";
                                    <img src="@oRuta" class="img-circle" />
                                    <p>

                                        <text>
                                            @user.UserName
                                            <small>@user.Email</small>
                                        </text>


                                    </p>
                                }
                                else
                                {
                                    if (user.Comment == "M")
                                    {
                                        oRuta = oRuta + "hombre.png";
                                    }
                                    else
                                    {
                                        oRuta = oRuta + "mujer.png";
                                    }
                                    <img src="@oRuta" class="img-circle" />
                                    <p>

                                        <text>
                                            @user.UserName
                                            <small>@user.Email</small>
                                        </text>


                                    </p>
                                }
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="col-xs-6 text-center">

                                    <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#modal_Modalidad">
                                        <i class="fa fa-picture-o fa-fw"></i>&nbsp;Imagen
                                    </button>
                                </div>
                                <div class="col-xs-6 text-center">
                                    <a class="btn btn-sm btn-info" style="color:#fff;" href="@Url.Action("ListaReporte", "Reporte", new { i = DateTime.Now, f = DateTime.Now })"><i class="fa fa-line-chart fa-fw"></i>&nbsp;Reporte   </a>
                                </div>

                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">

                                <div class="pull-right">
                                    <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-flat"><i class="fa fa-sign-out fa-fw"></i>&nbsp;Logout</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        @Html.Partial("_Menu")

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @Html.Raw(ViewBag.Title)
                </h1>

            </section>

            <!-- Main content -->
            <section class="content">
                @RenderBody()

                @RenderSection("scripts", required: false)

            </section>
            <!-- /.content -->
        </aside>
        <!-- /.right-side -->
    </div>
    <!-- ./wrapper -->
    <!-- Modal Datos -->
    <div class="modal fade" id="modal_Modalidad" tabindex="-1" role="dialog" aria-labelledby="modal_ModalidadLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="modal_ModalidadLabel">Cambiar imagen de perfil</h4>
                </div>
                <div class="modal-body">
                    <div id="dropZone">Arraste su imagen aqui</div>
                    <br />
                    Archivos Cargados:
                    <ul id="uploadResult"></ul>

                </div>


            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <script src="/js/plugins/jquery.filedrop.js"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="/js/AdminLTE/app.js" type="text/javascript"></script>

</body>

</html>
