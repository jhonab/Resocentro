<script>
    var table;
    var myDate = new Date();

    $(document).ready(function () {


        $("#msj").fadeOut()//ocultar el msj
        $('.animate').autosize();//autosizeTexbox
        table = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("ListaAsync", "SupervisarExamen")",
            //"bProcessing": true,
            "iDisplayLength": 20,
            "lengthMenu": [[20, 25, 50, -1], [20, 25, 50, "All"]],
            "aoColumns": [
                             { "sName": "N Examen" },//0
                             { "sName": "Paciente" },//1
                             { "sName": "HCita", "bVisible": false },//2
                             { "sName": "HAdmin." },//3
                             { "sName": "Min."},//4
                             { "sName": "Concicion", "bVisible": false },//5
                             { "sName": "Estudio" },//6
                             { "sName": "Equipo" },//7
                             {
                                 "sName": "Acciones",
                                 "mRender": function (data, type, full) {
                                     return "";
                                 }
                             },//8
                             { "sName": "isvip", "bVisible": false },//9
                             { "sName": "sedacion", "bVisible": false },//10
                             { "sName": "docEscan", "bVisible": false },//11
                             { "sName": "docEscan", "bVisible": false },//12
                             { "sName": "isSupervisable", "bVisible": false }//13

            ],
            "createdRow": function (row, aData, dataIndex) {
                //celdad a ocultar
                /* $('td:eq(5)', row).addClass('ocultar1');
                 $('td:eq(5)', row).css('d', 'd');
                 */


                // si es una validacion pendiente
                var fec_admi = new Date((aData[3]).substring(6, 10), parseInt((aData[3]).substring(3, 5)) - 1, (aData[3]).substring(0, 2), 0, 0, 0);
                var fec_now = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate(), 0, 0, 0);
                if (fec_admi < fec_now) {
                    $(row).addClass('warning');
                }
                else {
                    $('td:eq(2)', row).html((aData[3]).substring(11));
                }
                // si es Sedacion
                if (aData[10] == "True") {
                    $(row).addClass('danger alert-danger');
                }
                // si es VIP
                if (aData[9] == "True") {
                    $('td:eq(1)', row).html(aData[1] + ' <i class="fa fa-star fa-lg fa-spin" style="color: #F8DB07;"></i>');
                }
                // minutos trascurridos
                $('td:eq(3)', row).addClass('texto-medio');
                if (parseInt(aData[4]) > 40) {
                    $('td:eq(3)', row).addClass('tiempo_excedente');
                }
                else if (parseInt(aData[4]) > 20) {
                    $('td:eq(3)', row).addClass('tiempo_intermedio');
                }
                else {
                    $('td:eq(3)', row).addClass('tiempo_correcto');
                }

                // Adjuntos
                if (aData[11] == "True" || aData[12] == "True") {
                    $('td:eq(1)', row).append('&nbsp;&nbsp;<button type="button" onclick="DescargarAdjunto(' + aData[0] + ',' + aData[11].toString().toLowerCase() + ',' + aData[12].toString().toLowerCase() + ');" class="btn btn-outline btn-primary btn-xs "><i class="fa fa-paperclip fa-2x"></i> </button>');

                }

                //agregar botn para supervisar

                if (aData[13] == "True") {
                $('td:eq(6)', row).html('&nbsp;&nbsp;<button type="button" onclick="supervisarExamen(' + aData[0] + ')"  class="btn btn-success" ><i class="fa fa-check-square-o fa-2x"></i></button>');
                } else {
                    $('td:eq(6)', row).html('&nbsp;&nbsp;<button type="button" onclick="supervisarExamen(' + aData[0] + ')"  class="btn btn-primary" ><i class="fa fa-check-square-o fa-2x"></i></button>');

                }
                //agregar botn para Cancelar
                $('td:eq(0)', row).append('<br /><button type="button" onclick="ModalCancelarExamen(' + aData[0] + ')"  class="btn btn-outline  btn-danger btn-xs"><i class="fa fa-times-circle"></i> Cancelar</button>');

                //agregarboton de informacion Paciente
                $('td:eq(1)', row).append('<br /> <button type="button" onclick="cargarDatosExamen(' + aData[0] + ',1)"  class="btn btn-outline btn-info btn-xs" ><i class="fa fa-info-circle"></i> Info</button>');
                //agregarboton de informacion Paciente
                if (aData[6].indexOf("Ampliacion") > -1) {
                    $('td:eq(1)', row).append('<button type="button" onclick="cargarInfoAmpliacion(' + aData[0] + ')"  class="btn btn-outline btn-warning btn-xs" ><i class="fa fa-info-circle"></i> Ampliación</button>');
                }
                //agregarboton de informacion Encuesta
                //$('td:eq(6)', row).append('<br /> <input type="button" onclick="verEncuesta(' + aData[0] + ')"  class="btn btn-outline btn-default btn-xs" value="Encuesta"/>');
            }
        });

        $("#div_time").html('<p class="pull-right">Last Refresh : <b>' + myDate.toLocaleTimeString() + '</b></p>');
        $('#myDataTable').css("width", "100%!important");
        //setInterval(function () {
        //    table.ajax.reload();
        //    $('#myDataTable').width("100%");
        //    var _date = new Date();
        //    $("#div_time").html('<p class="pull-right">Last Refresh : <b>' + _date.toLocaleTimeString() + '</b></p>');
        //}, 5000);

        //getEquipo(table, "2");//tipo Modal


    });
    function cargarTabla() {
        table.ajax.reload();
        var _date = new Date();
        $("#div_time").html('<p class="pull-right">Last Refresh : <b>' + _date.toLocaleTimeString() + '</b></p>');
    }
    function supervisarExamen(examen) {
        window.location.href = "@Url.Action("SupervisarExamen", "SupervisarExamen")" + '?examen=' + examen;
    }
    function DescargarAdjunto(examen, doc, carta) {
        if (doc) {
            window.open('@Url.Action("Getfile", "Adjuntos")' + '?examen=' + examen + '&tipo=1');
        }
        if (carta) {
            window.open('@Url.Action("Getfile", "Adjuntos")' + '?examen=' + examen + '&tipo=2');
        }
    }
    function verEncuesta(examen) {
        var _equipo = $("#lstEquipo").val();
        if (_equipo != '') {
            window.open('/LectorEncuesta/LectorEncuesta?examen=' + examen+'&isVisible=false', '_blank');
        } else {

            mostrarmensaje(4, 'Seleccione el <b>Equipo</b> para enviar los datos ');
        }
    }

    function ModalCancelarExamen(examen) {
        $('#inputhidden_id').val(examen);
        $('#modal_Cancelar').modal('toggle');
    }

    function cargarInfoAmpliacion(examen) {

        var _equipo = $("#lstEquipo").val();
        if (_equipo != '') {
            $("#myModalAmpliacion .modal-body").load("/RealizarEncuesta/getAmpliacioninfo?examen=" + examen, function (response, status, xhr) {
                if (status == "error") {
                    mostrarmensaje(4, 'Error:\n' + xhr.status + " " + xhr.statusText);
                }
                $('#myModalAmpliacion').modal('show');
            });
        }
        else {

            mostrarmensaje(4, 'Seleccione el <b>Equipo</b> para enviar los datos ');
        }
    }

    function cargarDatosExamen(examen) {

        var _equipo = $("#lstEquipo").val();
        if (_equipo != '') {
            $.ajax({
                url: "@Url.Action("DatosExamen", "SupervisarExamen")",
                data: { examen: examen },
                dataType: "json",
                type: "POST",
                error: function () {
                    mostrarmensaje(4, 'Ocurrio un problema y <b>no</b> se enviaron los datos al sistema');
                },
                success: function (data) {

                    $('#myModal .modal-body').html(data.mensaje);
                    $('#myModal').modal('toggle');

                }
            });
        }
        else {

            mostrarmensaje(4, 'Seleccione el <b>Equipo</b> para enviar los datos ');
        }
    }




</script>

