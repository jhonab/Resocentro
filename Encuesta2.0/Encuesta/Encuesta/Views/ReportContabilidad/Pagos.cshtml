@{
    ViewBag.Title = "<i class='fa fa-money'></i> Pagos";
    ViewBag.Titlenot = "Reporte Contabilidad";
}
<div class="row" id="div_PreEntrevista">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Visor de Carga de Modalidades</h1>
            </div>

            <span style="padding: 0 10px 0 10px;font-size: 11px;">Rango de fechas para contabilidad es de 26 (Mes anterior)- 25 (Mes de Busqueda)</span>
            <div class="box-body">

                <div class="row">
                    
                    <div class="col-sm-8">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Fecha Inicio</label>
                                <input type="date" id="ini" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Fecha Inicio</label>
                                <input type="date" id="fin" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label></label>
                                <button class="form-control btn btn-primary" onclick="ObtenerReporte()">Buscar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" id="lst_resumen">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>

</div>
<script type="text/javascript">
    function ObtenerReporte() {
        var ini = $("#ini").val();
        var fin = $("#fin").val();

        if (ini != "" && fin != "") {
            $("#lst_resumen").load("/ReportContabilidad/ListaPagos?i=" + ini + "&f=" + fin, function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Sorry but there was an error: ";
                    $("#error").html(msg + xhr.status + " " + xhr.statusText);
                }

            });
        }
    }
</script>
