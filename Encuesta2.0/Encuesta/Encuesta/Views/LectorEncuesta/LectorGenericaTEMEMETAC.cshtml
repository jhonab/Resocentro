@model Encuesta.ViewModels.Encuesta.EncuestaGenericaTEMEMETACModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Encuesta TEM Generica";
    Encuesta.Util.Variable util = new Encuesta.Util.Variable();   
}

<script src="~/js/encuestas/LectorEncuesta.js"></script>
<script src="~/js/encuestas/encuestas_ini.js"></script>
<link href="~/css/Encuesta.css" rel="stylesheet" />


<script type="text/javascript">
    $(document).ready(function () {
        $("#msj").hide()//ocultar el msj
    });
</script>



<div class="row" id="div_PreEntrevista">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title titulo_ocultar">
                    ENCUESTA TEM GENERICA

                </h1>
            </div>
            <div class="box-body chart-responsive">
                @*Datos Examen*@
                <div class="row">

                    <div class="col-lg-12">

                        <div id="Info-examen" class="panel panel-medico">
                            <div class="panel-heading">
                                <h3 class="panel-title">Datos Examen</h3>
                                <div class="panel-options pull-right">
                                    <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">

                                        <div class="col-sm-5 col-lg-5">
                                            @Html.Partial("_DatosExamenLector", Model._examen)
                                        </div>
                                        <div class="col-sm-5 col-lg-5">
                                            @Html.Partial("_DatosEncuestaLector", Model._encuesta)
                                        </div>
                                        <div class="col-sm-2 col-lg-2">
                                            <span>Adicional :</span>
                                            <div class="btn-group-vertical" role="group" style="margin-bottom: 10px;">

                                                @if (Model._examen.ATENCION.CITA.sedacion)
                                                {
                                                    <button class="btn btn-danger box-tools  pull-right no-print">SEDACION</button>
                                                }
                                                @if (Model._examen.ATENCION.CITA.claustrofobico)
                                                {
                                                    <button class="btn btn-info box-tools  pull-right no-print">CLAUSTROFOBICO</button>
                                                }

                                            </div>
                                            <div class="btn-group-vertical" role="group" id="div_adicional">
                                                <button class="btn btn-medico box-tools btn-sm pull-right no-print" id="btn-detalle" onclick="Mostrardetalle(false)">
                                                    <i class="fa fa-plus fa-1x"></i>&nbsp;Detalle Encuesta
                                                </button>
                                                <button class="btn btn-medico box-tools btn-sm pull-right no-print" onclick="verHistorial('@Model._examen.codigo')">
                                                    <i class="fa fa-history fa-1x"></i>&nbsp;Estudios Previos
                                                </button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="row" id="div_historial">
                </div>
                <div id="div-resumen">
                    <div class="pregunta">
                        @*Pregunta 1*@
                        @if (Model.p1.Value)
                        {
                            <div class="col-lg-12">
                                - <span class="resaltar">Tiene diagnóstico </span>
                                <span class="resaltar">@Model.p1_1 </span>
                                .
                            </div>
                        }
                        @*Pregunta 2*@

                        <div class="col-lg-12">
                            - <span class="resaltar">Tiempo de enfermedad </span>desde
                            <span class="resaltar">@Model.p2_2 @util.getNombreTiempoRM(Model.p2_1)</span>
                            .
                        </div>

                        @*PREGUNTA 3*@
                        @if (Model.p3.Value)
                        {
                            <div class="col-lg-12">
                                - <span class="resaltar">Tiene Tratamiento.</span>
                            </div>
                        }
                        @*Pregunta 4*@

                        <div class="col-lg-12">
                            - <span class="resaltar">Tiene cirugias </span>:
                            <span class="resaltar">@Model.p4</span>.
                        </div>

                        @*Pregunta 5*@
                        <div class="col-lg-12">
                            - <span class="resaltar">Razón del estudio es por </span>:
                            <span class="resaltar">
                                @if (Model.p5 == 1)
                                {
                                    @:Diagnóstico
                                    }
                                @if (Model.p5 == 2)
                                {
                                    @:Seguimiento post tratamiento
                                    }
                            </span>
                            .
                        </div>
                        @*PREGUNTA 6*@

                        <div class="col-lg-12">- Tiene los siguientes sintomas<span class="resaltar">@Model.p6</span> .</div>

                        @*PREGUNTA 7*@

                        <div class="col-lg-12">- El Medico tratante diagnostico <span class="resaltar">@Model.p7</span> .</div>

                        @*PREGUNTA 8*@
                        <div class="col-lg-12">
                            @if (Model.p8.Value)
                            {
                                <span class="resaltar">- Se indicó usar contraste.</span>
                            }
                            else
                            {
                                <span class="resaltar">- No se indicó usar contraste.</span>
                            }
                        </div>
                    </div>
                </div>
                <div id="div-detallado">
                    <h3></h3>
                    @*Molestias*@
                    <div class="row">

                        <div class="col-md-12">
                            <div class=" ">

                                <div class="">

                                    @*Molestias*@
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="panel panel-dark" data-collapsed="0">
                                                <div class="panel-heading">
                                                    <div class="panel-title">Principales Molestias </div>
                                                    <div class="panel-options pull-right">
                                                        <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                                                    </div>
                                                </div>
                                                <div class="panel-body chart-responsive">

                                                    @*Pregunta 1*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>1. Tiene diagnóstico?</cite><span class="asterisco">(*)</span>
                                                                        <label class="checkbox-inline">
                                                                            @Html.RadioButtonFor(model => model.p1, "true", new { @mostrar_respuesta = "rpta_p1" }) Si
                                                                        </label>
                                                                        <label class="checkbox-inline">
                                                                            @Html.RadioButtonFor(model => model.p1, "false", new { @ocultar_respuesta = "rpta_p1" }) No
                                                                        </label>
                                                                        <div class="col-md-12" id="rpta_p1">
                                                                            <div class="col-md-12">
                                                                                <div class="row">
                                                                                    @Html.TextAreaFor(model => model.p1_1, new { @placeholder = "¿Cuál fue el diagnóstico?", @rows = "5", @class = "form-control" })
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*Pregunta 2*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>2. Tiempo de Enfermedad?</cite><span class="asterisco">(*)</span>
                                                                        <div class="col-md-12">
                                                                            <div class="col-md-12">
                                                                                <div class="row">
                                                                                    <div class="col-sm-2 col-lg-2">
                                                                                        @Html.TextBoxFor(model => model.p2_1, new { @placeholder = "Cant.", @type = "number", @min = "0", @class = "form-control" })
                                                                                    </div>
                                                                                    <div class="col-sm-4 col-lg-4">
                                                                                        @Html.DropDownListFor(model => model.p2_2, (SelectList)ViewBag.tiempo, "- Seleccione -", new { @class = "form-control" })
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Procedimientos Relacionados*@
                    <div class="row">

                        <div class="col-md-12">
                            <div class=" ">
                                <div class="">


                                    <div class="row">

                                        <div class="col-md-12">

                                            <div class="panel panel-dark" data-collapsed="0">
                                                <div class="panel-heading">
                                                    <div class="panel-title">Procedimientos Relacionados </div>
                                                    <div class="panel-options pull-right">
                                                        <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                                                    </div>
                                                </div>
                                                <div class="panel-body chart-responsive">
                                                    @*Pregunta 3*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>3. Tiene Tratamiento?</cite><span class="asterisco">(*)</span>
                                                                        <label class="checkbox-inline">
                                                                            @Html.RadioButtonFor(model => model.p3, "true") Si
                                                                        </label>
                                                                        <label class="checkbox-inline">
                                                                            @Html.RadioButtonFor(model => model.p3, "false") No
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*Pregunta 4*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>4. Cirugias previas?</cite><span class="asterisco">(*)</span>
                                                                        <div class="col-md-12">
                                                                            <div class="col-md-12">
                                                                                @Html.TextAreaFor(model => model.p4, new { @placeholder = "Especifique cual y el motivo", @class = "form-control animate validate" })
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    @*Pregunta 5*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>5. Razon del Estudio</cite>

                                                                        <div class="col-md-12">
                                                                            <div class="col-md-12">
                                                                                <div class="radio">
                                                                                    <label>
                                                                                        @Html.RadioButtonFor(model => model.p5, "1") Diagnóstico
                                                                                    </label>
                                                                                </div>
                                                                                <div class="radio">
                                                                                    <label>
                                                                                        @Html.RadioButtonFor(model => model.p5, "2") Seguimiento Post Tratamiento
                                                                                    </label>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    @*Pregunta 6*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>6. Sintomas</cite><span class="asterisco">(*)</span>
                                                                        <div class="col-md-12">
                                                                            <div class="col-md-12">
                                                                                @Html.TextAreaFor(model => model.p6, new { @placeholder = "Especifique cual", @class = "form-control animate validate" })
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Preguntas a Resolver*@
                    <div class="row">

                        <div class="col-md-12">

                            <div class=" ">
                                <div class="">
                                    <div class="row">

                                        <div class="col-md-12">

                                            <div class="panel panel-dark" data-collapsed="0">
                                                <div class="panel-heading">
                                                    <div class="panel-title">Preguntas a Resolver </div>
                                                    <div class="panel-options pull-right">
                                                        <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                                                    </div>
                                                </div>
                                                <div class="panel-body chart-responsive">
                                                    @*Pregunta 7*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>7. Diagnóstico presuntivo del médico tratante?</cite><span class="asterisco">(*)</span>

                                                                        <div class="col-md-12">
                                                                            @Html.TextAreaFor(model => model.p7, new { @placeholder = "Especifique", @class = "form-control animate validate" })
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>






                                                    </div>

                                                </div>


                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                    @*Indicaciones*@
                    <div class="row">

                        <div class="col-md-12">

                            <div class=" ">
                                <div class="">
                                    <div class="row">

                                        <div class="col-md-12">

                                            <div class="panel panel-dark" data-collapsed="0">
                                                <div class="panel-heading">
                                                    <div class="panel-title">Indicaciones </div>
                                                    <div class="panel-options pull-right">
                                                        <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                                                    </div>
                                                </div>
                                                <div class="panel-body chart-responsive">
                                                    @*Pregunta 8*@
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <div>
                                                                        <cite>8. Administrar contraste :</cite><span class="asterisco">(*)</span>

                                                                        <div class="col-md-12">
                                                                            <div class="radio">
                                                                                <label>
                                                                                    @Html.RadioButtonFor(model => model.p8, "True") Si
                                                                                </label>
                                                                            </div>
                                                                            <div class="radio">
                                                                                <label>
                                                                                    @Html.RadioButtonFor(model => model.p8, "False")No
                                                                                </label>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>


                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <br />
            @*@Html.Partial("_DatosCalificacionLector", Model._encuesta)*@
        </div>
    </div>
</div>