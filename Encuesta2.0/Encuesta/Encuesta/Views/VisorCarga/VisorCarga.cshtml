@model IEnumerable<Encuesta.ViewModels.Encuesta.VisorCargaViewModell>

@{
    ViewBag.Title = "<i class='fa fa fa-cog fa-spin'></i> Visor Carga";
    ViewBag.Titlenot = "Visor Carga";
}
<script>
    $(function () {

        //activacion del boton en el menu
        $(".sidebar > .sidebar-menu > li").removeClass("active");
        $(".sidebar > .sidebar-menu > li.p1_2").addClass("active");
    });
</script>
<style>
    .box .box-group > .box {
        margin-bottom: 20px;
    }

    @@media (max-width: 767px) {
        .visibleCarga-xs {
            display: inline !important;
        }
    }
</style>
<div class="row" id="div_PreEntrevista">
    <div class="col-md-12">
        <div class="">
            <div class="text-right">
                <button class="btn btn-success " onclick="location.reload();"><i class="fa fa-refresh "></i>&nbsp; Actualizar</button>
            </div>
            <div class="col-md-12">
                <ul class="nav nav-tabs bordered">
                    @foreach (var item in Model)
                    {
                        var count = item.estudios.Count();
                        var clase = count == 1 ? "warning" :
                            "success";

                        <li class="alert-@clase border">
                            <a href="#tab_@item.codigoequipo" data-toggle="tab" aria-expanded="false">
                                <span class="visible-xs">
                                    @item.nombreequipo
                                </span>
                                <span class="hidden-xs">@item.nombreequipo <span class='badge badge-@clase'>@count</span></span>
                            </a>
                        </li>
                    }


                </ul>

                <div class="tab-content">

                    @foreach (var item in Model)
                    {
                        var count = item.estudios.Count();
                        var clase = count == 1 ? "warning" :
                            "success";
                        <div class="tab-pane" id="tab_@item.codigoequipo">
                            <h4>
                                @item.nombreequipo
                                @if (count == 1)
                                {<b class="visibleCarga-xs "> &nbsp;-&nbsp;1 Estudio</b>}
                                else
                                {<b class="visibleCarga-xs"> &nbsp;-&nbsp;@count Estudios</b>}
                            </h4>
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>N° Examen</th>
                                        <th>Paciente</th>
                                        <th>Estudio</th>
                                        <th>Ini. Tec.</th>
                                        <th>Min</th>
                                        @if (User.IsInRole("1") || User.IsInRole("2"))
                                        {
                                            <th>Reasignar </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var estudio in item.estudios)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => estudio.codigo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => estudio.paciente)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => estudio.estudio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => estudio.inicio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => estudio.min_transcurri)
                                            </td>
                                            @if (User.IsInRole("1") || User.IsInRole("2"))
                                            {
                                                <td>
                                                    <button class="btn btn-primary " onclick="reasignar('@estudio.codigo');">
                                                        Reasignar
                                                    </button>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    }

                </div>
            </div>


        </div>
        <!-- /.box-body -->
    </div>

</div>

<script type="text/javascript">

    function asignarModalidad(examen) {
        var _equipo = $("#cboequipo_asignar").val();
        if (_equipo != "") {
            $.ajax({
                url: "@Url.Action("setModalidad", "RealizarEncuesta")",
                data: { examen: examen, equipo: _equipo },
                dataType: "json",
                type: "POST",
                error: function () {
                    alert("Sucedio un error al asignar la modalidad");
                },
                success: function (data) {
                    if (data.result) {
                        $('#myModal').modal('toggle');
                        alert("Se realizo la asignación");
                        location.reload();
                    }
                    else
                        alert("No se realizo la asignación");
                }
            });
        } else {
            alert("Seleccione un Equipo")
        }
    }

    function reasignar(examen) {
        $("#lbln_exam").val(examen)
        $.ajax({
            url: "@Url.Action("getEquipo", "VisorCarga")",
            data: { examen: examen },
            dataType: "json",
            type: "POST",
            error: function () {
                alert("Error al cargar Equipo");
            },
            success: function (data) {
                var items = "";
                items += "<option value='' >- Seleccione -</option>";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });
                $("#cboequipo_asignar").html(items);
            }
        });
        $('#myModal').modal('toggle');
    }
</script>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel">Reasignar Examen a Equipo</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="lbln_exam" />
                @Html.Partial("_AsignarEquipo")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="asignarModalidad($('#lbln_exam').val());">Enviar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
