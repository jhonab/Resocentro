@model IEnumerable<SistemaResocentro.Models.CLINICAHOSPITAL>

@{
    ViewBag.Title = "Lista de Instituciones Médicas";
}

<h2>Lista de Instituciones Médicas</h2>
<link href="~/js/datatables/responsive/css/datatables.responsive.css" rel="stylesheet" />
<link href="~/js/datatables/datatable.css" rel="stylesheet" />
<script src="~/js/datatables/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    var tabla;
    $(function () {
        tabla = $('.table').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "@Url.Action("ListaAsync", "Institucionmedica")"
        });
        $(".esperando").remove();
        $(".hidden").removeClass("hidden");

    });
</script>
<div class="row">
    <div class="esperando " style="text-align: center;color:#065d9d"><i class="fa fa-spinner fa-5x fa-spin"></i> <br />Cargando...</div>
    <div class="col-lg-12 ">
        <p>
            <a href='@Url.Action("Create")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Institución Médica</a>
        </p>
