                <div class="col-md-4">
                    <label>Tipo Institución Medica</label>

                    @Html.DropDownList("cbotipoInstitucion", new SelectList(new SistemaResocentro.Models.Variable().getTipoInstitucionMedica(), "nombre", "nombre"),"Todos", new { @class = "form-control " })

                </div>
            </p>*@
        <style>
            @@media only screen and (max-width: 800px) {
                table td:nth-child(3),
                table th:nth-child(3),
                table td:nth-child(4),
                table th:nth-child(4),
                table td:nth-child(5),
                table th:nth-child(5) {
                    display: none;
                }
            }
        </style>
        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Razón Social
                    </th>
                    <th>
                        Telefonos
                    </th>
                    <th>
                        Web
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th>
                        Geolocalización
                    </th>
                    <th>
                        Activo
                    </th>
                    <th style="width:90px!important"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade" id="modalAll" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalAll-Label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modal-body">
        </div>
        <!-- /.modal-content -->

    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modalDelete" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalDelete-Label" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" id="modal-body">
            <div class="modal-header modal-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="titulo_asignacionmedico"></h4>
            </div>
            <div class="modal-body" id="body-delete">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button id="btndelete" type="submit" class="btn btn-danger" onclick=""></button>
            </div>
        </div>
        <!-- /.modal-content -->

    </div>
    <!-- /.modal-dialog -->
</div>

<script type="text/javascript">
    $(function () {
        $('#modalAll').on('shown.bs.modal', function (e) {
            initialize();
        })
    });
    function openModalDelete(id, estado, institucion) {
        if (estado) {
            $("#titulo_asignacionmedico").html("Desactivar Institución Médica");
            $("#body-delete").html("¿Está seguro de que desea <b>desactivar</b> la Institución Médica?<br/><br/>Institución Médica: <label>" + institucion + "</label>");
            $("#btndelete").html("<i class='fa fa-times fa-lg'></i>&nbsp;&nbsp; Desactivar ");
        } else {
            $("#titulo_asignacionmedico").html("Activar Institución Médica");
            $("#body-delete").html("¿Está seguro de que desea <b>activar</b> la Institución Médica?<br/><br/>Institución Médica: <label>" + institucion + "</label>");
            $("#btndelete").html("<i class='fa fa-check fa-lg'></i>&nbsp;&nbsp; Activar ");
        }
        $("#btndelete").attr('onclick', "confirmDelete('" + id + "')")
        $("#modalDelete").modal('show');
    }

    function confirmDelete(id) {
        $.ajax({
            url: '/InstitucionMedica/Delete',
            data: { id: id },
            dataType: "json",
            type: "POST",
            success: function (data) {
                $("#modalDelete").modal('hide');
                tabla.ajax.reload();
            },
            error: function () {
                toastr.error("Ocurrio un error y no se pudo Institución", "Error", opts);
            }
        });
    }
    function openModal(url) {
        $("#modal-body").load(url, function (response, status, xhr) {
            if (status == "error") {
                toastr.error('Error:\n' + xhr.status + " " + xhr.statusText, 'Error', opts);
            } else {
                $("#modalAll").modal('show');
            }
        });
    }
</script>