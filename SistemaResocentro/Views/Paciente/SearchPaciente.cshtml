@{
    Layout = null;
}
<script src="~/js/script/paciente/searchpaciente.js"></script>
<link href="~/css/progressbar.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">

        <div class="form-horizontal " id="div_paciente">
            <h4>Buscar Paciente</h4>
            <hr />
            <input type="hidden" id="result_idpaciente" />
            <input type="hidden" id="result_nombres" />
            <div class="col-md-8">
                <div class="form-group">
                    <label class="control-label col-md-2">Apellidos:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="apellidos" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <button class="btn btn-info btn-xs" onclick="getPaciente()" type="button"><i class="fa fa-search fa-2x"></i></button>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group" id="table_paciente">
                </div>
            </div>
        </div>
        
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
</div>