@model IEnumerable<SistemaResocentro.Models.Colaborador>

@{
    ViewBag.Title = "Lista de Colaboradores";
}

<h2>Lista de Colaboradores</h2>
<link href="~/js/datatables/datatable.css" rel="stylesheet" />
<script src="~/js/datatables/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-12 ">
        <p>
            <a href='@Url.Action("Create")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Médico</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Apellidos Nombres
                    </th>
                    <th>
                        Cargo
                    </th>
                    <th>
                        DNI
                    </th>
                    <th style="width:90px!important"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellidos),@Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dni)
                    </td>

                    <td>
                        <a href="@Url.Action("Edit", new { id = item.idColaborador })"><i class='fa fa-edit fa-2x'></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
