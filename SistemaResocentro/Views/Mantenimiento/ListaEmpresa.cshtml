@model IEnumerable<SistemaResocentro.ViewModel.Mantenimiento.EmpresaMantenimiento>

@{
    ViewBag.Title = "Lista de Empresas de Servicio Técnico";
}
<h2>Lista de Empresas de Servicio Técnico</h2>
<link href="~/js/datatables/datatable.css" rel="stylesheet" />
<script src="~/js/datatables/jquery.dataTables_ES.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    $(function () {
        t0 = $(".table").DataTable({
            "sPaginationType": "bootstrap"
        });
    });
</script>
<div class="row">
    <div class="col-md-12">
        <p>
            <a href='@Url.Action("CrearEmpresa")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Empresa</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Razon Social
                    </th>
                    <th>
                        Correo Mantenimiento
                    </th>
                    <th>
                        Correo Soporte
                    </th>
                    <th style="width:20px!important"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.razonsocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correoMantenimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correoSoporte)
                        </td>
                        <td style="width:20px!important">
                            <a href="@Url.Action("EditarEmpresa", "Mantenimiento", new { idEmpresa = item.idEmpresaMantenimiento })" title="Modificar Sucursales Asignadas"><i class="fa fa-edit fa-2x "></i></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>