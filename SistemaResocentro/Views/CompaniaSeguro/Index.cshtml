@{
    ViewBag.Title = "Lista de Compañias de Seguro";
}

<h2>Lista de Compañias de Seguro</h2>
<link href="~/js/datatables/responsive/css/datatables.responsive.css" rel="stylesheet" />
<link href="~/js/datatables/datatable.css" rel="stylesheet" />
<script src="~/js/datatables/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    var tabla;
    $(function () {
        tabla = $('.table').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "@Url.Action("ListaAsync", "CompaniaSeguro")"
        });
        $(".esperando").remove();
        $(".hidden").removeClass("hidden");

    });
</script>
<style>
   
        table td:nth-child(1),
        table th:nth-child(1),
        table td:nth-child(3),
        table th:nth-child(3){
            display: none;
        }
   
</style>

<div class="row">
    <div class="esperando " style="text-align: center;color:#065d9d"><i class="fa fa-spinner fa-5x fa-spin"></i> <br />Cargando...</div>
    <div class="col-lg-12 ">
        <p>
            @*<a href='@Url.Action("Create")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Compañia de Seguros</a>*@
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th style="width:90px!important"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
