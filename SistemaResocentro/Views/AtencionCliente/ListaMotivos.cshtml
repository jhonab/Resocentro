@model IEnumerable<SistemaResocentro.Models.MotivoCodigo>
@{
    ViewBag.Title = "Lista Motivos";
}

<h2>Lista Motivos</h2>

<link href="~/js/datatables/datatable.css" rel="stylesheet" />

<script src="~/js/datatables/jquery.dataTables_ES.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    $(function () {
        t0 = $("#dataTables-example").DataTable({
            "sPaginationType": "bootstrap"
        });
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="">

            <p>
                <a href='@Url.Action("RegistrarMotivo")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Motivo</a>
            </p>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:90px;">
                            Codigo
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Nomenclatura
                        </th>
                        <th style="width:105px;"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idMotivo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nomenclatura)
                            </td>
                            <td >
                                <a href="@Url.Action("DetalleMotivo", new { id = item.idMotivo.ToString().Trim() })"><i class="fa fa-list fa-lg"></i></a>
                                |
                               <a href="@Url.Action("EditarMotivo", new { id = item.idMotivo.ToString().Trim() })"><i class="fa fa-edit fa-lg"></i> </a>
                                |
                                <a href="@Url.Action("EliminarMotivo", new { id = item.idMotivo.ToString().Trim() })">
                                    <i class="fa fa-trash fa-lg " style="color:#ff0000"></i> </a>

                            </td>
                        </tr>
                    }

</tbody>
            </table>


        </div>

    </div>
</div>
