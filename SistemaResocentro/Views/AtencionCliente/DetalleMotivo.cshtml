@model SistemaResocentro.Models.MotivoCodigo

@{
    ViewBag.Title = "Detalle Motivo";
}

<h2>Detalle Motivo</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            

            <div class="row">
                <div class="col-lg-4">

                    <div class="form-group">
                        <label>Codigo:</label>
                        @Html.DisplayFor(model => model.idMotivo)
                    </div>


                    <div class="form-group">
                        <label>Descripción:</label>
                        @Html.DisplayFor(model => model.descripcion)
                    </div>

                    <div class="form-group">
                        <label>Nomenclatura:</label>
                        @Html.DisplayFor(model => model.nomenclatura)
                    </div>

                    <div class="form-group">
                        <label>Usuario Registro:</label>
                        @Html.DisplayFor(model => model.USUARIO.ShortName)
                    </div>

                    <div class="form-group">
                        <label>Fecha Creación:</label>
                        @Html.DisplayFor(model => model.fecha)
                    </div>
                    @if (Model.lastUpdate != null)
                    {
                        <div class="form-group">
                            <label>Usuario Modifico:</label>
                            @Html.DisplayFor(model => model.USUARIO1.ShortName)
                        </div>

                        <div class="form-group">
                            <label>Fecha Modificación:</label>
                            @Html.DisplayFor(model => model.lastUpdate)
                        </div>
                    }
                    <p>

                        @Html.ActionLink("Editar", "Edit", new { id = Model.idMotivo }, new { @class = "btn btn-success" })
                        <a href='@Url.Action("Index")' class="btn btn-primary">Regresar a la Lista</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

