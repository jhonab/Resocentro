@model SistemaResocentro.Models.MotivoCodigo

@{
    ViewBag.Title = "RegistrarMotivo";
}

<h2>Registrar Motivo</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="">
            

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-lg-4">

                        <div class="form-group">
                            <label>Descripción</label>
                            @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control", @placeholder = "Ingrese descripción de motivo", @type = "text", @required = "required" })
                            @Html.ValidationMessageFor(model => model.descripcion)
                        </div>

                        <div class="form-group">
                            <label>Nomenclatura</label>
                            @Html.TextBoxFor(model => model.nomenclatura, new { @class = "form-control", @placeholder = "Ingrese nomenclatura de motivo", @type = "text", @required = "required" })
                            @Html.ValidationMessageFor(model => model.nomenclatura)
                        </div>

                        <p>
                            <a href='@Url.Action("ListaMotivos")' class="btn btn-default"><i class="fa fa-arrow-circle-left fa-lg"></i>&nbsp;&nbsp;Regresar a la Lista</a>
                            <button id="btnregistrar" type="submit" class="btn btn-success"><i class="fa fa-check fa-lg"></i>&nbsp;&nbsp; Registrar </button>
                        </p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
