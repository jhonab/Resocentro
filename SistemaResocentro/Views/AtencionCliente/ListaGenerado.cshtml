@model IEnumerable<SistemaResocentro.Models.CorrelativoMotivo>
@{
    ViewBag.Title = "ListaGenerado";
}

<h2>Lista Generado</h2>


<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <h2></h2>
            @if (User.IsInRole("7"))//Registrar Correlativo
            {
                <p>
                    <a href='@Url.Action("RegistrarGenerado")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;Registrar Correlativo</a>
                </p>
            }
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:90px;">
                            Codigo
                        </th>
                        <th>
                            Motivo
                        </th>
                        <th>
                            Ultimo Cambio
                        </th>
                        <th style="width:70px;">Generar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idCorrelativo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotivoCodigo.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lastUpdate)
                            </td>
                            <td class="table_id">
                                <a href="@Url.Action("EditarGenerado", new { id = item.idCorrelativo.ToString().Trim() })"><i class="fa fa-external-link fa-lg"></i> </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
