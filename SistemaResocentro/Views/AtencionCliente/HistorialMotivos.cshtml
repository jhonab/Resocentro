@model IEnumerable<SistemaResocentro.Models.HistorialCorrelativo>
@{
    ViewBag.Title = "HistorialMotivos";
}

<h2>HistorialMotivos</h2>

<link href="~/js/datatables/datatable.css" rel="stylesheet" />

<script src="~/js/datatables/jquery.dataTables_ES.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    $(function () {
        t0 = $("#dataTables-example").DataTable({
            "sPaginationType": "bootstrap",
            "ordering":false
        });
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:80px;">
                            Codigo
                        </th>
                        <th>
                            Tipo 
                        </th>
                        <th>
                            Motivo
                        </th>
                        <th>
                            Correlativo
                        </th>
                        <th>
                            Generado por
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Solicitante
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idHistorial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotivoCodigo.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.motivo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correlativo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USUARIO.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.solicitante)
                            </td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>
</div>
