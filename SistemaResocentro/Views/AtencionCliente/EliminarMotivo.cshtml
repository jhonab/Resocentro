@model SistemaResocentro.Models.MotivoCodigo
@{
    ViewBag.Title = "EliminarMotivo";
}

<h2>Eliminar Motivo :<i> @Html.DisplayFor(model => model.descripcion)</i></h2>

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            

            <div class="row">
                <div class="col-lg-4">

                    <div class="form-group">
                        <label>Codigo:</label>
                        @Html.DisplayFor(model => model.idMotivo)
                    </div>

                    <div class="form-group">
                        <label>Descripción:</label>
                        @Html.DisplayFor(model => model.descripcion)
                    </div>

                    <div class="form-group">
                        <label>Nomenclatura:</label>
                        @Html.DisplayFor(model => model.nomenclatura)
                    </div>

                    <div class="form-group">
                        <label>Usuario Registro:</label>
                        @Html.DisplayFor(model => model.USUARIO.ShortName)
                    </div>

                    <div class="form-group">
                        <label>Fecha Creación:</label>
                        @Html.DisplayFor(model => model.fecha)
                    </div>
                    @if (Model.lastUpdate != null)
                    {
                        <div class="form-group">
                            <label>Usuario Modifico:</label>
                            @Html.DisplayFor(model => model.USUARIO1.ShortName)
                        </div>

                        <div class="form-group">
                            <label>Fecha Modificación:</label>
                            @Html.DisplayFor(model => model.lastUpdate)
                        </div>
                    }
                    <p>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <a href='@Url.Action("ListaMotivos")' class="btn btn-primary"><i class="fa fa-arrow-circle-left fa-lg"></i>&nbsp;&nbsp;Regresar a la Lista</a>
                            <button id="btnregistrar" type="submit" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>&nbsp;&nbsp; Eliminar </button>

                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>