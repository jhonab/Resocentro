@model SistemaResocentro.Models.CorrelativoMotivo
@{
    ViewBag.Title = "EditarGenerado";
}

<h2>Generar Correlativo</h2>


<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <h2></h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-lg-4">

                        <div class="form-group">
                            @Html.HiddenFor(model => model.idCorrelativo)

                            @Html.HiddenFor(model => model.idmotivo)
                            @Html.HiddenFor(model => model.correlativo)
                        </div>


                        <div class="form-group">
                            <label>Motivo</label>
                            @Html.TextBoxFor(model => model.MotivoCodigo.descripcion, new { @class = "form-control", @placeholder = "Ingrese descripción de motivo", @type = "text", @required = "required", @readonly = "readonly" })
                        </div>

                        <div class="form-group">
                            <label>Codigo Generado</label>
                            @Html.TextBoxFor(model => model.lastGenerado, new { @class = "form-control", @placeholder = "Correlativo Generado", @type = "text", @required = "required", @readonly = "readonly" })
                        </div>

                        <div class="form-group">
                            <label>Solicitado por</label>
                            @{Model.userRegister = "";}
                            @Html.TextBoxFor(model => model.userRegister, new { @class = "form-control", @placeholder = "Solicitante", @type = "text", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Motivo</label>

                            @Html.TextAreaFor(model => model.MotivoCodigo.userRegister, new { @class = "form-control", @placeholder = "Motivo para generar", @type = "text", @required = "required" })
                        </div>

                        <p>
                            <a href='@Url.Action("ListaGenerado")' class="btn btn-primary"><i class="fa fa-arrow-circle-left fa-lg"></i>&nbsp;&nbsp;Regresar a la Lista</a>
                            <button id="btnregistrar" type="submit" class="btn btn-success"><i class="fa fa-check fa-lg"></i>&nbsp;&nbsp; Generar Código </button>
                        </p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
