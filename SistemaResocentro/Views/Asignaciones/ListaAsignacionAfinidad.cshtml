@model IEnumerable<SistemaResocentro.Models.Institucion_Medico>

@{
    ViewBag.Title = "Afinidades a Medico";
}

<h2>Asignaciones de Afinidades a Medico</h2>
<link href="~/js/datatables/datatable.css" rel="stylesheet" />
<script src="~/js/datatables/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    var tabla;
    $(function () {   

        tabla = $('.table').DataTable({

            "processing": true,
            "serverSide": true,
            "ajax": "@Url.Action("ListaAsyncAfinidaMedico", "Asignaciones")"
        })
        $(".esperando").remove();
        $(".hidden").removeClass("hidden");
    });
</script>
<div class="row">
    <div class="esperando " style="text-align: center;color:#065d9d"><i class="fa fa-spinner fa-5x fa-spin"></i> <br />Cargando...</div>
    <div class="col-sm-12 ">
        <p>
            <a href="javascript:openmodalcreate('@Url.Action("CreateAfinidadMedico")')" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Asignar Afinidad a Médico</a>
        </p>
        <style>
            @@media only screen and (max-width: 800px) {
                table td:nth-child(1),
                table th:nth-child(1),
                table td:nth-child(4),
                table th:nth-child(4),
                table td:nth-child(5),
                table th:nth-child(5) {
                    display: none;
                }
            }
        </style>
        <table id="table_reporte" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Médico
                    </th>
                    <th>
                        CMP
                    </th>
                    <th>
                        Promotor
                    </th>
                    <th>
                        Pago
                    </th>
                    <th style="width:50px;"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAll" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalAll-Label" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" id="modal-body">
        </div>
        <!-- /.modal-content -->

    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modalCreate" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalCreate-Label" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" id="modal-bodycreate">

        </div>

    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="modalDelete" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalDelete-Label" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" id="modal-body">
            <div class="modal-header modal-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Eliminar Afinidad</h4>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar la Afinidad de forma permanente?<br />
                <label id="modaldelete-name"></label><br />
                <label id="modaldelete-cmp"></label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button id="btndelete" type="button" class="btn btn-danger" onclick=""><i class="fa fa-check fa-lg"></i>&nbsp;&nbsp; Eliminar </button>
            </div>
        </div>
        <!-- /.modal-content -->

    </div>
    <!-- /.modal-dialog -->
</div>

<link href="~/js/chosen/chosen.bootstrap.css" rel="stylesheet" />
@*<link href="~/js/chosen/chosen.css" rel="stylesheet" />*@
<script src="~/js/chosen/chosen.jquery.min.js"></script>
<script type="text/javascript">

    var isCargadoCreate = false;
    function openModalDelete(cmp, nombre) {
        $("#modaldelete-name").html("Nombres: " + nombre);
        $("#modaldelete-cmp").html("ID: " + cmp);
        $("#btndelete").attr('onclick', "confirmDelete('" + cmp + "')")
        $("#modalDelete").modal('show');
    }

    function confirmDelete(cmp) {
        $.ajax({
            url: '/Asignaciones/EliminarAfinidad',
            data: { id: cmp },
            dataType: "json",
            type: "POST",
            success: function (data) {
                $("#modalDelete").modal('hide');
                tabla.ajax.reload();
            },
            error: function () {
                toastr.error("Ocurrio un error y no se pudo Eliminar la afinidad", "Error", opts);
            }
        });
    }
    function openmodalcreate(url) {
        if (!isCargadoCreate) {
            $("#modal-bodycreate").load(url, function (response, status, xhr) {
                if (status == "error") {
                    toastr.error('Error:\n' + xhr.status + " " + xhr.statusText, 'Error', opts);
                } else {
                    isCargadoCreate = true;
                    $("#modalCreate").modal('show');
                }
            });
        } else {
            $("#modalCreate").modal('show');
        }
    }
    function openModal(url) {
        $("#modal-body").load(url, function (response, status, xhr) {
            if (status == "error") {
                toastr.error('Error:\n' + xhr.status + " " + xhr.statusText, 'Error', opts);
            } else {
                $("#modalAll").modal('show');
            }
        });
    }
</script>