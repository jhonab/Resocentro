<script src="~/js/chosen/chosen.jquery.min.js"></script>
<script type="text/javascript">
    var isCargadoCreate = false;
    function openModalDelete(id, estado, institucion, medico) {        
        if (estado) {
            $("#titulo_asignacionmedico").html("Desactivar Asignación");
            $("#body-delete").html("¿Está seguro de que desea <b>desactivar</b> la asginación Institución - Médico?<br/><br/>Institución Médica: <label>" + institucion + "</label><br/>Médico: <label>" + medico + "</label>");
            $("#btndelete").html("<i class='fa fa-times fa-lg'></i>&nbsp;&nbsp; Desactivar ");
        } else {
            $("#titulo_asignacionmedico").html("Activar Asignación");
            $("#body-delete").html("¿Está seguro de que desea <b>activar</b> la asginación Institución - Médico?<br/><br/>Institución Médica: <label>" + institucion + "</label><br/>Médico: <label>" + medico + "</label>");
            $("#btndelete").html("<i class='fa fa-check fa-lg'></i>&nbsp;&nbsp; Activar ");
        }
        $("#btndelete").attr('onclick', "confirmDelete('" + id + "')")
        $("#modalDelete").modal('show');
    }
    function confirmDelete(id) {
        $.ajax({
            url: '/Asignaciones/Delete',
            data: { id: id },
            dataType: "json",
            type: "POST",
            success: function (data) {
                $("#modalDelete").modal('hide');
                tabla.ajax.reload();
            },
            error: function () {
                toastr.error("Ocurrio un error y no se pudo guardar los cambios", "Error", opts);
            }
        });
    }
    function openmodalcreate(url) {
        if (!isCargadoCreate) {
            $("#modal-bodycreate").load(url, function (response, status, xhr) {
                if (status == "error") {
                    toastr.error('Error:\n' + xhr.status + " " + xhr.statusText, 'Error', opts);
                } else {
                    isCargadoCreate = true;
                    $("#modalCreate").modal('show');
                }
            });
        } else {
            $("#modalCreate").modal('show');
        }
    }
</script>