@model SistemaResocentro.Models.TKT_Counter
@{
    ViewBag.Title = "EditarCounter";
}

<h2>Editar Counter</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idcounter)

                            <div class="form-group">
                                <label class="control-label col-md-2">Nombre:</label>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.USUARIO.ShortName, new { htmlAttributes = new { @class = "form-control" } })
                                   
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Sede:</label>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.idSede, (SelectList)ViewBag.Sede, "- Seleccione -", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idSede, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Eliminado:</label>
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.isEliminado)
                                        @Html.ValidationMessageFor(model => model.isEliminado, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <p>
                                <a href='@Url.Action("ListaCounter")' class="btn btn-primary"><i class="fa fa-arrow-circle-left fa-lg"></i>&nbsp;&nbsp;Regresar a la Lista</a>
                                <button id="btnregistrar" type="submit" class="btn btn-success"><i class="fa fa-check fa-lg"></i>&nbsp;&nbsp; Guardar </button>
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
