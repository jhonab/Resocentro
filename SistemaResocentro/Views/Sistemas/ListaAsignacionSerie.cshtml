@model IEnumerable<SistemaResocentro.Models.Serie_Equipo>
@{

    ViewBag.Title = "Lista de Asignacion de Series";
}
<link href="~/js/datatables/datatable.css" rel="stylesheet" />

<script src="~/js/datatables/jquery.dataTables_ES.min.js"></script>
<script src="~/js/dataTables.bootstrap.js"></script>
<script type="text/javascript">
    $(function () {
        t0 = $(".table").DataTable({
            "sPaginationType": "bootstrap"
        });
    });
</script>
<div class="row">
    <div class="col-md-12">
        <p>
            <a href='@Url.Action("RegistrarAsignacionSerie")' class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp; Registrar Asignación</a>
        </p>

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Equipo
                    </th>
                    <th>
                        Tipo Doc.
                    </th>
                    <th>
                        Serie
                    </th>
                    <th>
                        Sede
                    </th>
                    <th>
                        Activo
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePc)
            </td>
            <td>
                @switch (item.TipoDocumento)
                    {
                        case 1:
                    <text>FACTURA</text>;
                            break;
                        case 3:
                    <text>BOLETA</text>;
                        break;
                        case 7:
                    <text>NOTA CRÉDITO</text>;
                        break;
                        case 8:
                    <text>NOTA DÉBITO</text>;
                        break;
                        default:
                    <text>-</text>;
                        break;
                    }
            </td>
            <td>
                @(item.SERIE.serie1.ToString() + "-" + item.SERIE.correlativo.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sucursal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.ActionLink("Borrar", "EliminarAsignacionSerie", new { id = item.idAsignacion })
            </td>
        </tr>
        }
            </tbody>
        </table>
    </div>
</div>