@model SistemaResocentro.Models.Serie_Equipo
@{

    ViewBag.Title = "Registrar Asignacion de Series";
}

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-12">
            <h2>Registras Asignacion de Serie</h2>
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NombrePc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.EditorFor(model => model.NombrePc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombrePc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idSerie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.DropDownListFor(model => model.idSerie, (SelectList)ViewBag.Series, "- Seleccione Serie -", htmlAttributes: new { @class = "form-control validar" })
                    @Html.ValidationMessageFor(model => model.idSerie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label> Tipo Documento</label>
                <div class="">
                    <select id="TipoDocumento" name="TipoDocumento" class="form-control">
                        <option value="">- Seleccione Tipo Documento -</option>
                        <option value="01">Factura</option>
                        <option value="03">Boleta</option>
                        <option value="07">Nota Crédito</option>
                        <option value="08">Nota Débito</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.TipoDocumento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sucursal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.DropDownListFor(model => model.Sucursal, (SelectList)ViewBag.Sucusales, "- Seleccione Sucursal -", htmlAttributes: new { @class = "form-control validar" })
                    @Html.ValidationMessageFor(model => model.Sucursal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 ">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "ListaAsignacionSerie")
    </div>
</div>