<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="Resocentro_Desktop.Interfaz.Herramienta.info.UCAdmision" 
             mc:Ignorable="d" 
             Width="350" Height="auto" Background="{DynamicResource Windows.Background}">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="N° Admision"/>
                <Label Content="Fecha y Hora"/>
                <Label Content="Peso "/>
                <Label Content="Altura."/>
            </StackPanel>
            <StackPanel>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding numero_admision}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding fecha_admision}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding peso_admision}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding altura_admision}"/>

                

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
