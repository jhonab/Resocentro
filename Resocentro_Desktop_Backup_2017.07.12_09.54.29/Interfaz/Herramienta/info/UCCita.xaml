<UserControl x:Class="Resocentro_Desktop.Interfaz.Herramienta.info.UCCita"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="350" Height="auto" Background="{DynamicResource Windows.Background}">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="N° Cita"></Label>
                <Label Content="Fecha Cita"></Label>
                <Label Content="Estado Cita"></Label>
                <Label Content="Usu. Tramita."></Label>
                <Label Content="Onservaciones"></Label>
            </StackPanel>
            <StackPanel>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding num_cita}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding fecha_cita}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding estado_cita}"/>
                <TextBox IsReadOnly="True" Padding="4" Text="{Binding usuario_registra}"/>
                <TextBox IsReadOnly="True" TextWrapping="Wrap" Padding="4" Text="{Binding observaciones_cita}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
