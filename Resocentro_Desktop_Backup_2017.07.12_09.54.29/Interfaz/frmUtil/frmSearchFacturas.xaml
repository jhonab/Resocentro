<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="Resocentro_Desktop.Interfaz.frmUtil.frmSearchFacturas"
        Title="frmSearchFacturas" Height="317" Width="800" Background="{DynamicResource Windows.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <telerik:RadGridView Name="gridFacturas" ShowGroupPanel="False" IsReadOnly="True" AutoGenerateColumns="False" RowIndicatorVisibility="Collapsed" RowActivated="gridFacturas_RowActivated">
            <telerik:RadGridView.Columns >
                <telerik:GridViewDataColumn  Header="Id" DataMemberBinding="{Binding idFac}" />
                <telerik:GridViewDataColumn  Header="Usuario" DataMemberBinding="{Binding usuario}" />
                <telerik:GridViewDataColumn  Header="Fecha" DataMemberBinding="{Binding fec_registro, StringFormat=\{0:dd/MM/yyyy\}}" />
                <telerik:GridViewDataColumn  Header="RUC" DataMemberBinding="{Binding ruc}" />
                <telerik:GridViewDataColumn  Header="Aseguradora" DataMemberBinding="{Binding aseguradora}" />
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
</Window>
