        </Button>
        <Label Name="lblaseguradora" Content="" Margin="122,45,21,0" VerticalAlignment="Top" Foreground="#FF00FFDC"/>
        <ComboBox Name="cboempresa" HorizontalAlignment="Left" Margin="429,12,0,0" VerticalAlignment="Top" Width="160"/>
        <StackPanel Grid.Row="2">
            <Label Content="Datos Adicionales:"/>
            <TextBox Name="txtdatosadicionales" Height="70" Background="{DynamicResource Windows.Background}" AcceptsReturn="True" TextWrapping="Wrap" Foreground="White" Text="" TextAlignment="Left" VerticalScrollBarVisibility="Auto" CharacterCasing="Upper" BorderBrush="White" BorderThickness="1" Template="{StaticResource TextBoxBaseControlTemplate}" />
        </StackPanel>
        <Grid  Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="85"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblresumen" Content="" HorizontalAlignment="Left"  Grid.Column="0" VerticalContentAlignment="Center"/>
            <Button Name="btnSiguiente" Content="Finalizar" Margin="5" Grid.Column="1" Click="btnSiguiente_Click" />
        </Grid>
    </Grid>
</Window>
