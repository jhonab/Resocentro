<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="Resocentro_Desktop.Interfaz.Caja.frmListaFacturacionGlobal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:styleSelector="clr-namespace:Resocentro_Desktop.Complemento"
        Title="Pre-Facturación Global" Height="600" Width="700"  Background="{DynamicResource Windows.Background}">
    <Window.Resources>
        <styleSelector:SeleccionListPreFactura x:Key="keySel">
            <styleSelector:SeleccionListPreFactura.nseleccionado>
                <Style TargetType="telerik:GridViewRow">
                    
                </Style>
            </styleSelector:SeleccionListPreFactura.nseleccionado>
            <styleSelector:SeleccionListPreFactura.seleccionado>
                <Style TargetType="telerik:GridViewRow">
                    <Setter Property="Background" Value="#FF84BDF7" />
                </Style>
            </styleSelector:SeleccionListPreFactura.seleccionado>
        </styleSelector:SeleccionListPreFactura>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" BorderBrush="White"
        		BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition/>
            
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <telerik:RadGridView AutoGenerateColumns="False" Name="grid_Atenciones" Grid.Row="1" RowStyleSelector="{StaticResource keySel}" RowEditEnded="grid_Atenciones_RowEditEnded" SelectionMode="Extended"  ShowColumnFooters="True" >           
            <telerik:RadGridView.Columns >
                <telerik:GridViewCheckBoxColumn Header="S" DataMemberBinding="{Binding isSelected}" />
                <telerik:GridViewDataColumn  Header="Fecha" IsReadOnly="True"   DataMemberBinding="{Binding fecha, StringFormat=\{0:dd/MM/yyyy\}}"/>
                <telerik:GridViewDataColumn  Header="N° Atención" IsReadOnly="True"   DataMemberBinding="{Binding numeroatencion}" />
                <telerik:GridViewDataColumn  Header="Paciente" IsReadOnly="True" DataMemberBinding="{Binding paciente}" />
                <telerik:GridViewDataColumn  Header="Estudio" IsReadOnly="True" DataMemberBinding="{Binding nombreestudio}" />
                <telerik:GridViewDataColumn  Header="E" IsReadOnly="True" DataMemberBinding="{Binding estadoestudio}" />
                <telerik:GridViewDataColumn  Header="Moneda" DataMemberBinding="{Binding moneda}" />
                <telerik:GridViewDataColumn  Header="Valor" DataMemberBinding="{Binding preciobruto}" />
                <telerik:GridViewDataColumn  Header="Aseguradora" IsReadOnly="True" DataMemberBinding="{Binding aseguradora}" />
                <telerik:GridViewDataColumn  Header="Pre-Liquidaciones" IsReadOnly="True" DataMemberBinding="{Binding preliquidaciones}" />
            </telerik:RadGridView.Columns>
            <telerik:RadContextMenu.ContextMenu>
                <telerik:RadContextMenu x:Name="RadContextMenuDetalle" Opening="RadContextMenuDetalle_Opening" >
                    <telerik:RadMenuItem Header="Seleccionar Items" Click="RadMenuItemSeleccionar_Click"/>
                    <telerik:RadMenuItem Header="Asignar Precio" Click="RadMenuItemAsignar_Click"/>
                    <telerik:RadMenuItem Header="Cambiar Moneda">
                        <telerik:RadMenuItem Header="Soles" Click="RadMenuItemSoles_Click"/>
                        <telerik:RadMenuItem Header="Dolares"  Click="RadMenuItemDolares_Click"/>
                    </telerik:RadMenuItem>
                </telerik:RadContextMenu>
            </telerik:RadContextMenu.ContextMenu>
        </telerik:RadGridView>
        <telerik:RadDatePicker Name="rdpinicio" HorizontalAlignment="Left" Height="24" Margin="54,10,0,0" VerticalAlignment="Top" Width="148"/>
        <telerik:RadDatePicker Name="rdpfin" HorizontalAlignment="Left" Height="24" Margin="254,12,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Inicio" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Label Content="Fin" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top"/>
        <Button Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="612,12,0,0" VerticalAlignment="Top" Click="btnBuscar_Click" />
        <Label Content="Aseguradora" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnReceptorEmpresa" HorizontalAlignment="Left" Margin="92,45,0,0" Width="25" Padding="5" Click="btnReceptorEmpresa_Click" Height="26" VerticalAlignment="Top" >
