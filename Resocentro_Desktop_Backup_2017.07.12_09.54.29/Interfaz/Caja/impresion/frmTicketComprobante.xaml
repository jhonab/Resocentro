<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="Resocentro_Desktop.Interfaz.Cobranza.frmTicketComprobante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmTicketComprobante" Background="White" Width="8 cm" Height="auto"  MaxWidth="8cm" SizeToContent="Height">
    <Grid Margin="0" Height="auto" Width="7.5 cm" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Name="grid" Height="auto" Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Margin="10" Height="auto">
                <Image Name="imglogo" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Resocentro_Desktop;component/img/Logo_Azul.png" Stretch="Uniform" Height="80"  />
            </StackPanel>
            <StackPanel Grid.Row="1" Width="270" >
                <Label Name="lblrazonsocial" Content="RESONANCIA MEDICA S.R.LTDA" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Center"/>
                <Label Name="lblruc" Content="RUC :20297451023" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Center"/>
                <TextBlock Name="txtdireccion" TextAlignment="Center" FontSize="9" TextWrapping="Wrap" Text="DIRECCION" Foreground="Black" Margin="0,0,10,0"/>
                <TextBlock Name="lbltipodocumento" TextWrapping="Wrap" Text="BOLETA DE VENTA" Margin="0,15,0,0"  Foreground="Black" FontSize="14" FontWeight="Bold" FontFamily="Arial" Padding="1" HorizontalAlignment="Center"/>
                <Label Name="lblnumero_documento" Content="B123-12331" Foreground="Black" FontSize="12" FontWeight="Bold" FontFamily="Arial" Padding="1" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                <Label Name="lblfecha_emision" Content="FECHA DE EMISION: 15-01-2016 17:12:13" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lblruc_emisor" Content="DNI: 47207591" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <TextBlock Name="lblcliente" TextWrapping="Wrap" Text="CLIENTE: ALVAREZ BENITO JHON EFER" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Separator Margin="0,5,0,5"/>

                <TextBlock Name="lblnumeroatencion" TextWrapping="Wrap" Text="N° ATENCIÓN: 123456" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <TextBlock Name="lblpaciente" TextWrapping="Wrap" Text="PACIENTE: ALVAREZ BENITO JHON EFER" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <TextBlock Name="lblcia" TextWrapping="Wrap" Text="CIA: PARTICULARES" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lbltitular" Content="TITULAR: " Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lblempresa" Content="EMPRESA: " Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lblpoliza" Content="N° POLIZA: " Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lblcarta" Content="CARTA: 2132154645 - COB: 90% " Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>

                <Label Name="lbltipomoneda" Content="MONEDA: SOL" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Name="lbligvporcentaje" Content="IGV:  18%" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>

                <Label  Content="==================================================" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                <Label Content="Descripción                                                                         Importe" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label Content="Cant.   Precio Unitario" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>
                <Label  Content="==================================================" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>

                <DataGrid Name="grid_items" AutoGenerateColumns="False" GridLinesVisibility="None" BorderThickness="0" HeadersVisibility="None" >
                    <DataGrid.Columns>
                        <DataGridTextColumn  Header="r" Width="195" MaxWidth="215" Binding="{Binding descripcion}" FontSize="9" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="60" MaxWidth="60"   FontSize="9" Binding="{Binding valor}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Label  Content="==================================================" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Left"/>

                <Label Name="lblexonerada" Content="Op .Exonerada     1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,0,15,0"/>
                <Label Name="lblinafecta" Content="Op .Inafecta     1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,0,15,0"/>
                <Label Name="lblgravada" Content="Op .Gravada     1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,0,15,0"/>
                <Label Name="lbligv" Content="IGV   1,1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Margin="0,0,15,0" />
                <Label Name="lbldescuento" Content="Desc. 20%     1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,0,15,0"/>
                <Label Name="lbltotal" Content="Total    1203.01" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Margin="0,0,15,0" />
                <TextBlock x:Name="txttotal_texto" Text="SON: MIL DOCIENTOS TREITA NUEVA  CON 50/100 Soles" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" TextAlignment="Center" TextWrapping="Wrap" Padding="1" HorizontalAlignment="Center" Margin="0,10,15,0" />
                <Label Name="lblcajero" Content="CAJERO:  JHON ALVAREZ" Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="1" HorizontalAlignment="Right" Margin="0,0,15,0"/>
                <TextBlock/>
                <TextBlock x:Name="txtretencion" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="9" VerticalAlignment="Top" Foreground="Black" Padding="0" FontFamily="Arial Unicode MS" FontWeight="Normal" Text="" TextAlignment="Center" />
                <TextBlock Name="txtretencionrreso" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="9" Foreground="Black" Padding="0" FontFamily="Arial Unicode MS" FontWeight="Normal" Text="RESONANCIA MEDICA SRL HA SIDO DESIGNADA COMO AGENTE DE RETENCIÓN SEGUN R.S.395-2014 SUNAT" TextAlignment="Center" />
                <telerik:RadBarcodeQR  x:Name="rad_barcode" Height="172" Padding="0" HorizontalAlignment="Left" Text=""  FontSize="14" Margin="-15,0,0,0" Width="285"    />
                <TextBlock  TextWrapping="Wrap" Text="Representación impresa del Comprobante de Venta Electrónica, esta puede ser consultada en www.resocentro.com. &#x0a; Autorizado mediante resolución de intendencia &#x0a; N° 0320050000440 " Foreground="Black" FontSize="9" FontWeight="Normal" FontFamily="Arial" Padding="0"  HorizontalAlignment="Center" Margin="15,10,28,10" TextAlignment="Center"/>

            </StackPanel>

        </Grid>

    </Grid>

</Window>
